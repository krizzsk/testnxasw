<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="2dp"/>
            <solid android:color="#ccc"/>
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <shape>
            <corners android:radius="2dp"/>
            <gradient android:startColor="#e0fff362" android:endColor="#e0fd9728" android:angle="0"/>
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="2dp"/>
            <gradient android:startColor="#fff362" android:endColor="#fd9728" android:angle="0"/>
        </shape>
    </item>
</selector>
