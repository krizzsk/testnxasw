<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_enabled="true" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#ffe600"/>
            <gradient android:startColor="#fff362" android:endColor="#fd9728" android:angle="0"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#e1b102"/>
            <gradient android:startColor="#fff362" android:endColor="#fd9728" android:angle="0"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#ffe600"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
</selector>
