<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_enabled="false">
        <shape android:shape="oval">
            <stroke android:width="@dimen/rui_checkbox_border_width" android:color="@color/rui_color_grey_4"/>
            <solid android:color="@color/rui_color_F0F0F0"/>
            <size android:height="@dimen/rui_checkbox_large_size" android:width="@dimen/rui_checkbox_large_size"/>
        </shape>
    </item>
    <item android:state_checked="true" android:drawable="@drawable/rui_checkbox_large_selected"/>
    <item>
        <shape android:shape="oval">
            <stroke android:width="@dimen/rui_checkbox_border_width" android:color="@color/rui_color_grey_3"/>
            <size android:height="@dimen/rui_checkbox_large_size" android:width="@dimen/rui_checkbox_large_size"/>
        </shape>
    </item>
</selector>
