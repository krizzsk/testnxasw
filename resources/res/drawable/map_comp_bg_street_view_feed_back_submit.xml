<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="28dp"/>
            <gradient android:startColor="#ff7040" android:endColor="#ff8f40" android:angle="90"/>
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="28dp"/>
            <gradient android:startColor="#ff8f40" android:endColor="#ff7040" android:angle="90"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="28dp"/>
            <solid android:color="#f3f4f5"/>
        </shape>
    </item>
</selector>
