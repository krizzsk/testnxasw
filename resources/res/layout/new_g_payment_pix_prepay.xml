<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:clickable="false" android:layout_width="match_parent" android:layout_height="wrap_content">
    <FrameLayout android:clickable="false" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:paddingLeft="30dp" android:paddingTop="30dp" android:paddingRight="30dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="20dp" android:paddingStart="30dp" android:paddingEnd="30dp">
            <TextView android:textSize="24sp" android:textStyle="bold" android:textColor="#ff000000" android:id="@+id/tv_pix_prepay_code_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/GRider_Prepay_Payment_completed_CWrs" android:includeFontPadding="false"/>
            <TextView android:textSize="14sp" android:textColor="#ff000000" android:ellipsize="end" android:id="@+id/tv_pix_prepay_code_info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/GRider_Prepay_Transaction_code_rmjK" android:maxLines="1" android:includeFontPadding="true"/>
            <TextView android:textSize="14sp" android:textColor="#ff000000" android:ellipsize="end" android:id="@+id/tv_pix_prepay_code_tips" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/GRider_Prepay_If_you_kess" android:lines="3" android:includeFontPadding="false"/>
            <LinearLayout android:gravity="left|center_vertical|center_horizontal|center|start" android:orientation="horizontal" android:id="@+id/ll_pix_prepay_copy_container" android:paddingLeft="0dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:paddingStart="0dp" android:paddingEnd="10dp">
                <TextView android:textSize="14sp" android:textColor="#ffff8040" android:ellipsize="end" android:id="@+id/tv_pix_prepay_container_code" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:maxWidth="250dp" android:maxLines="1" android:includeFontPadding="false" android:layout_marginEnd="10dp"/>
                <ImageView android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/g_ic_payment_pix_prepay_copy"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:layout_gravity="end" android:orientation="vertical" android:id="@+id/g_pix_prepay_close_layout" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:contentDescription="@string/oc_close_button" android:layout_alignParentEnd="true">
            <ImageView android:id="@+id/g_pix_prepay_close_image" android:background="@drawable/new_g_title_close_selector" android:focusable="true" android:clickable="true" android:layout_width="30dp" android:layout_height="30dp"/>
        </LinearLayout>
    </FrameLayout>
    <global.didi.pay.newview.NewGlobalPaymentFeeView android:id="@+id/fv_pix_prepay_fee" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="20dp"/>
    <global.didi.pay.newview.NewGlobalPaymentSubmitView android:id="@+id/sv_pix_prepay_code_confirm" android:layout_width="match_parent" android:layout_height="52dp" android:layout_marginTop="20dp"/>
    <global.didi.pay.newview.NewGlobalPaymentSubmitView android:id="@+id/sv_pix_prepay_code_paid" android:layout_width="match_parent" android:layout_height="52dp" android:layout_marginTop="20dp"/>
    <global.didi.pay.newview.NewGlobalPaymentSubmitView android:id="@+id/sv_pix_prepay_code_cancel" android:layout_width="match_parent" android:layout_height="52dp" android:layout_marginTop="16dp" android:layout_marginBottom="24dp"/>
    <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/tv_pix_prepay_code_cancel" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="24dp">
        <TextView android:textSize="14sp" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/GRider_Prepay_Don_t_IUpX" android:includeFontPadding="false" android:drawablePadding="8dp"/>
        <ImageView android:layout_width="12dp" android:layout_height="12dp" android:layout_marginLeft="4dp" android:src="@drawable/g_ic_payment_pix_prepay_cancel_arrow" android:layout_marginStart="4dp"/>
    </LinearLayout>
</LinearLayout>
