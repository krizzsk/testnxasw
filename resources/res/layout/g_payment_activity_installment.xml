<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:orientation="horizontal" android:id="@+id/layout_title_bar" android:background="#f3f4f5" android:layout_width="match_parent" android:layout_height="52dp">
        <ImageView android:id="@+id/iv_close" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="56dp" android:layout_height="20dp" android:src="@drawable/_99_page_close" android:layout_centerVertical="true" android:paddingStart="16dp" android:paddingEnd="16dp"/>
        <ImageView android:id="@+id/iv_helper" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="56dp" android:layout_height="20dp" android:src="@drawable/g_ic_payment_helper" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:paddingStart="16dp" android:paddingEnd="16dp" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <FrameLayout android:gravity="center" android:layout_gravity="center_horizontal" android:orientation="vertical" android:id="@+id/layout_bottom_bar" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <Button android:textSize="20sp" android:textStyle="bold" android:textColor="@color/black" android:layout_gravity="center" android:id="@+id/btn_installment" android:background="@drawable/_99_submit_btn_bg_new_selector" android:layout_width="335dp" android:layout_height="52dp" android:layout_marginTop="24dp" android:layout_marginBottom="24dp" android:text="@string/GRider_installment_Confirmation_nYsJ" android:textAllCaps="false" android:stateListAnimator="@null"/>
    </FrameLayout>
    <LinearLayout android:orientation="vertical" android:background="#f3f4f5" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:layout_above="@+id/layout_bottom_bar" android:layout_below="@+id/layout_title_bar">
        <LinearLayout android:orientation="vertical" android:paddingLeft="30dp" android:paddingTop="14dp" android:paddingRight="24dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="30dp" android:paddingEnd="24dp">
            <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/title_installment" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/GRider_installment_Selection_of_NeLu" android:includeFontPadding="false"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/container_title_installment" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_marginBottom="15dp"/>
        </LinearLayout>
        <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="vertical" android:id="@+id/container_body_installment" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:divider="@drawable/g_payment_installment_divider" android:showDividers="middle" android:dividerPadding="12dp"/>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="14sp" android:textColor="#ff5c6166" android:id="@+id/tv_installment_item_bottom_tip" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="45dp" android:layout_marginTop="20dp" android:layout_marginRight="30dp" android:layout_marginBottom="20dp" android:text="@string/GRider_installment_The_cash_fGEb" android:layout_marginStart="45dp" android:layout_marginEnd="30dp"/>
                    <View android:background="@drawable/wallet_global_paymethod_bg_gray_circle" android:layout_width="5dp" android:layout_height="5dp" android:layout_marginLeft="30dp" android:layout_marginTop="27dp" android:layout_marginStart="30dp"/>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <View android:background="@drawable/g_payment_installment_shadow" android:layout_width="match_parent" android:layout_height="20dp" android:layout_above="@+id/layout_bottom_bar"/>
</RelativeLayout>
