<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/df_act_window_bg_color" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/submit_btn">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="14sp" android:textColor="@color/df_main_text_color2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="18dp" android:layout_marginTop="20dp" android:layout_marginBottom="20dp" android:text="@string/df_appeal_materials_main_title" android:layout_marginStart="18dp"/>
            <RelativeLayout android:id="@+id/doc_type_container" android:background="@color/df_white_color" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="6dp">
                <TextView android:textSize="19sp" android:textColor="@color/df_main_text_color1" android:id="@+id/doc_type_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="18dp" android:layout_marginTop="18dp" android:layout_marginBottom="3dp" android:maxWidth="230dp" android:layout_marginStart="18dp"/>
                <TextView android:textSize="12sp" android:textColor="@color/df_main_text_color3" android:id="@+id/doc_type_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="18dp" android:maxWidth="210dp" android:text="@string/df_appeal_materials_additional_doc_type_desc" android:layout_below="@+id/doc_type_title" android:layout_alignLeft="@+id/doc_type_title" android:layout_alignStart="@+id/doc_type_title"/>
                <TextView android:textSize="12sp" android:textColor="@color/df_main_text_color2" android:gravity="center" android:id="@+id/doc_type_take_photo" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="18dp" android:text="@string/df_take_photo" android:drawableRight="@drawable/df_appeal_right_arrow" android:drawablePadding="2dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:drawableEnd="@drawable/df_appeal_right_arrow" android:layout_marginEnd="18dp" android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/driver_photo_container" android:background="@color/df_white_color" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="6dp">
                <TextView android:textSize="19sp" android:textColor="@color/df_main_text_color1" android:id="@+id/driver_photo_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="18dp" android:layout_marginTop="18dp" android:layout_marginBottom="3dp" android:layout_marginStart="18dp"/>
                <TextView android:textSize="12sp" android:textColor="@color/df_main_text_color3" android:id="@+id/driver_photo_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="18dp" android:maxWidth="210dp" android:layout_below="@+id/driver_photo_title" android:layout_alignLeft="@+id/driver_photo_title" android:layout_alignStart="@+id/driver_photo_title"/>
                <TextView android:textSize="12sp" android:textColor="@color/df_main_text_color2" android:gravity="center" android:id="@+id/driver_photo_take_photo" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="18dp" android:text="@string/df_take_photo" android:drawableRight="@drawable/df_appeal_right_arrow" android:drawablePadding="2dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:drawableEnd="@drawable/df_appeal_right_arrow" android:layout_marginEnd="18dp" android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/face_photo_container" android:background="@color/df_white_color" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="6dp">
                <TextView android:textSize="19sp" android:textColor="@color/df_main_text_color1" android:id="@+id/face_photo_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="18dp" android:layout_marginTop="18dp" android:layout_marginBottom="3dp" android:text="@string/df_appeal_materials_driver_face_note" android:layout_marginStart="18dp"/>
                <TextView android:textSize="12sp" android:textColor="@color/df_main_text_color3" android:id="@+id/face_photo_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="18dp" android:maxWidth="210dp" android:text="@string/df_appeal_materials_driver_face_desc" android:layout_below="@+id/face_photo_title" android:layout_alignLeft="@+id/face_photo_title" android:layout_alignStart="@+id/face_photo_title"/>
                <TextView android:textSize="12sp" android:textColor="@color/df_main_text_color2" android:gravity="center" android:id="@+id/face_photo_take_photo" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="18dp" android:text="@string/df_take_photo" android:drawableRight="@drawable/df_appeal_right_arrow" android:drawablePadding="2dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:drawableEnd="@drawable/df_appeal_right_arrow" android:layout_marginEnd="18dp" android:layout_alignParentEnd="true"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <Button android:enabled="false" android:textSize="@dimen/df_main_text_size_normal" android:textStyle="bold" android:textColor="@color/br_df_submit_materials_btn_text_color" android:id="@+id/submit_btn" android:background="@drawable/br_df_submit_btn_with_white_bg" android:layout_width="match_parent" android:layout_height="@dimen/df_btn_with_white_bg_height" android:text="@string/df_submit" android:layout_alignParentBottom="true" android:textAllCaps="false"/>
</RelativeLayout>
