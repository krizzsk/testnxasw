<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/df_act_window_bg_color" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/result_status_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="120dp" android:layout_centerHorizontal="true"/>
    <TextView android:textSize="@dimen/df_main_text_size_medium" android:textColor="@color/df_main_text_color1" android:gravity="center" android:id="@+id/result_title_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:layout_below="@+id/result_status_icon" android:layout_centerHorizontal="true"/>
    <TextView android:textSize="@dimen/df_main_text_size_small" android:textColor="@color/df_main_text_color2" android:gravity="center" android:id="@+id/result_desc_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="20dp" android:layout_below="@+id/result_title_tv" android:layout_centerHorizontal="true" android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/result_btn_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="20dp" android:layout_marginBottom="20dp" android:layout_alignParentBottom="true" android:layout_marginStart="20dp" android:layout_marginEnd="20dp">
        <Button android:textSize="@dimen/df_main_text_size_normal" android:textColor="@color/df_appeal_result_main_btn_color" android:id="@+id/main_btn" android:background="@drawable/df_appeal_result_main_btn_bg" android:layout_width="0dp" android:layout_height="@dimen/df_btn_height" android:layout_weight="1" android:textAllCaps="false"/>
        <Button android:textSize="@dimen/df_main_text_size_normal" android:textColor="@color/df_black_color" android:id="@+id/secondary_btn" android:background="@drawable/df_appeal_result_secondary_btn_bg" android:visibility="gone" android:layout_width="0dp" android:layout_height="@dimen/df_btn_height" android:layout_marginLeft="16dp" android:text="@string/df_exit" android:layout_weight="1" android:textAllCaps="false" android:layout_marginStart="16dp"/>
    </LinearLayout>
</RelativeLayout>
