<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:background="@color/white" android:layout_width="match_parent" android:layout_height="60dp">
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true">
            <TextView android:textSize="16sp" android:textColor="@color/gray" android:ellipsize="end" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="18dp" android:maxLength="31"/>
            <TextView android:textSize="12sp" android:id="@+id/subtitle" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="18dp" android:layout_marginTop="4dp" android:layout_below="@+id/title"/>
        </RelativeLayout>
        <androidx.appcompat.widget.SwitchCompat android:id="@+id/switcher" android:layout_width="50dp" android:layout_height="30dp" android:layout_marginRight="15dp" android:thumb="@drawable/switch_didi_thumb" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:track="@drawable/switch_didi_track_selector"/>
    </RelativeLayout>
</LinearLayout>
