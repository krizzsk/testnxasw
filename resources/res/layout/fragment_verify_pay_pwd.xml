            <TextView android:textSize="24sp" android:textStyle="bold" android:textColor="#000000" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:text="@string/Finance_latour_Enter_the_xESC"/>
            <LinearLayout android:orientation="horizontal" android:id="@+id/amount_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp">
