<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/common_dialog_bg" android:layout_width="@dimen/common_dialog_root_layout_wdith" android:layout_height="wrap_content">
    <RelativeLayout android:paddingLeft="@dimen/wxagent_dialog_margin" android:paddingTop="@dimen/wxagent_dialog_margin" android:paddingRight="@dimen/wxagent_dialog_margin" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/img_logo" android:layout_width="@dimen/common_dialog_icon_img_wdith" android:layout_height="@dimen/common_dialog_icon_img_height" android:src="@drawable/hongbao_share" android:scaleType="fitXY" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/common_dialog_btn_margin_24" android:layout_toRightOf="@+id/img_logo" android:layout_alignTop="@+id/img_logo">
            <EditText android:textColor="@color/light_gray" android:id="@+id/dialog_edit_content" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxHeight="300dp" android:minLines="3" android:singleLine="false" android:maxLength="140" style="@style/TextView.LightGray.Medium"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout android:gravity="right|center_vertical|center_horizontal|center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/wxagent_dialog_margin" android:layout_marginTop="80px" android:layout_marginRight="@dimen/wxagent_dialog_margin">
        <TextView android:id="@+id/dialog_txt_count" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/TextView.LightGray.Small"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10px" android:text="@string/didi_text_tip" style="@style/TextView.LightGray.Small"/>
    </LinearLayout>
    <View android:background="@color/light_sss_gray" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginTop="15px"/>
    <LinearLayout android:layout_gravity="center_horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/wxagent_dialog_margin" android:layout_marginTop="@dimen/wxagent_dialog_margin" android:layout_marginRight="@dimen/wxagent_dialog_margin" android:layout_marginBottom="@dimen/wxagent_dialog_btn_margin_bottom">
        <Button android:textSize="@dimen/font_size_medium" android:textColor="@color/gray" android:gravity="center" android:id="@+id/btn_cancel" android:background="@drawable/common_btn_white_selector" android:layout_width="0px" android:layout_height="@dimen/wxagent_dialog_btn_height" android:layout_marginRight="20px" android:text="@string/cancel" android:layout_weight="1"/>
        <Button android:textSize="@dimen/font_size_medium" android:textColor="@color/white" android:gravity="center" android:id="@+id/btn_share" android:background="@drawable/common_btn_orange_selector" android:layout_width="0px" android:layout_height="@dimen/wxagent_dialog_btn_height" android:layout_marginLeft="20px" android:text="@string/share" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
