<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/rly_content_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp">
        <ImageView android:id="@+id/iv_left" android:layout_width="12dp" android:layout_height="12dp" android:src="@drawable/global_evaluate_quotation_marks_left" android:scaleType="fitCenter"/>
        <ImageView android:id="@+id/iv_right" android:layout_width="12dp" android:layout_height="12dp" android:src="@drawable/global_evaluate_quotation_marks_right" android:scaleType="fitCenter" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
        <TextView android:textSize="12sp" android:textColor="#999999" android:gravity="top|left|center_vertical|center_horizontal|center" android:id="@+id/oc_evaluate_comment_content_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/iv_right" android:layout_toRightOf="@+id/iv_left"/>
    </RelativeLayout>
    <EditText android:textSize="14sp" android:textColor="#000000" android:textColorHint="#999999" android:gravity="top|left|center_vertical|center_horizontal|center" android:id="@+id/oc_evaluate_comment_view" android:background="@drawable/global_evaluate_comment_edit_bg" android:paddingLeft="18dp" android:paddingTop="15dp" android:paddingRight="18dp" android:paddingBottom="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="28dp" android:layout_marginRight="28dp" android:hint="@string/oc_evaluate_comment_hint" android:maxLines="6" android:maxLength="140" android:imeOptions="actionDone" android:textCursorDrawable="@drawable/global_evaluate_cursor_drawable"/>
    <TextView android:textSize="14sp" android:textColor="#666666" android:gravity="center" android:layout_gravity="bottom|right|center_vertical|center_horizontal|center" android:id="@+id/oc_evaluate_comment_text_limit_view" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="28dp" android:layout_marginRight="33dp" android:layout_marginBottom="5dp"/>
</FrameLayout>
