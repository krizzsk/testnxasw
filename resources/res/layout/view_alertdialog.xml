            <Button android:textSize="14dp" android:textColor="@color/alert_text_color" android:gravity="center" android:id="@+id/btn_neg" android:background="@drawable/alertdialog_left_selector" android:layout_width="126dp" android:layout_height="match_parent" android:text="@string/cancel" android:layout_weight="1" android:textAllCaps="false"/>
            <TextView android:id="@+id/img_line" android:layout_width="14dp" android:layout_height="wrap_content"/>
            <RelativeLayout android:gravity="center" android:id="@+id/btn_pos" android:background="@drawable/alertdialog_left_selector" android:layout_width="126dp" android:layout_height="match_parent" android:layout_weight="1">
                <TextView android:textSize="14dp" android:textColor="@color/alert_text_color" android:gravity="center" android:id="@+id/btn" android:layout_width="wrap_content" android:layout_height="40dp" android:text="@string/i_can" android:layout_weight="1"/>
                <TextView android:textSize="14dp" android:textColor="@color/alert_text_color" android:gravity="center" android:id="@+id/jishi" android:layout_width="wrap_content" android:layout_height="40dp" android:text="（15s）" android:layout_toRightOf="@+id/btn"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <com.didi.hawaii.p120ar.view.GirdBackGround android:padding="10dp" android:layout_width="0dp" android:layout_height="0dp" android:layout_alignLeft="@+id/lLayout_bg" android:layout_alignTop="@+id/lLayout_bg" android:layout_alignRight="@+id/lLayout_bg" android:layout_alignBottom="@+id/lLayout_bg"/>
</RelativeLayout>
