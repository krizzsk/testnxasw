        <TextView android:textSize="18dp" android:textColor="@color/alert_text_color" android:gravity="center" android:id="@+id/txt_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="28dp" android:layout_marginRight="15dp" android:text="位置确认" android:singleLine="true"/>
        <com.didi.hawaii.p120ar.view.AlignTextView android:textSize="16dp" android:textColor="@color/alert_text_color" android:gravity="left" android:id="@+id/txt_msg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="22dp" android:layout_marginTop="22dp" android:layout_marginRight="22dp" android:minHeight="48dp" android:text="请确认你处在五彩城一层，否则将无法引导您到达上车点" android:lineSpacingExtra="2dp"/>
