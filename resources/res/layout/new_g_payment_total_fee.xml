        <TextView android:textSize="16dp" android:textStyle="bold" android:textColor="#000000" android:id="@+id/tv_fee" android:focusable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="R$15.73" android:includeFontPadding="false"/>
