    <TextView android:textSize="14sp" android:textColor="#ff919599" android:layout_gravity="center" android:id="@+id/tv_fee_original" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:text="R$20.00" android:includeFontPadding="false"/>
