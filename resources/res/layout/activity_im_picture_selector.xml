    </FrameLayout>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/im_media_recycler_view" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/im_picture_bottom_bar_container" android:layout_below="@+id/title_bar_layout_above" android:overScrollMode="never"/>
    <ImageView android:id="@+id/common_title_bar_line" android:visibility="gone" android:clickable="true" android:layout_width="match_parent" android:layout_height="@dimen/im_1_dp" android:src="@color/title_bar_line_bg" android:layout_below="@+id/title_bar_layout_above" android:importantForAccessibility="no"/>
</RelativeLayout>
