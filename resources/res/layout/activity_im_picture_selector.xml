    <FrameLayout android:gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/im_picture_bottom_bar_container" android:background="@drawable/im_picture_gallery_bottom_bar_bg" android:layout_width="match_parent" android:layout_height="50dp" android:layout_alignParentBottom="true">
        <TextView android:textSize="@dimen/im_16_sp" android:textColor="@color/im_color_333" android:layout_gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/tv_picture_preview" android:paddingLeft="17dp" android:paddingTop="5dp" android:paddingRight="17dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:alpha="0.5" android:paddingStart="17dp" android:paddingEnd="17dp"/>
