<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/iv_recording_back" android:layout_width="24dp" android:layout_height="24dp" android:layout_margin="15dp" android:src="@drawable/sf_icon_title_back"/>
    <View android:id="@+id/view_recording_title_divider" android:background="#ff999999" android:layout_width="match_parent" android:layout_height="1px" android:layout_below="@+id/iv_recording_back"/>
    <TextView android:textSize="16sp" android:textColor="#ff1478ff" android:id="@+id/tv_recording_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_below="@+id/view_recording_title_divider" android:layout_centerHorizontal="true"/>
    <TextView android:textSize="40sp" android:textColor="#ff1478ff" android:id="@+id/tv_recording_duration" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:text="00:00:00" android:layout_below="@+id/tv_recording_status" android:layout_centerHorizontal="true"/>
    <com.didi.safetoolkit.business.triprecording.view.RecordWaveView android:id="@+id/view_recording_animation" android:layout_width="match_parent" android:layout_height="120dp" android:layout_marginLeft="32dp" android:layout_marginTop="16dp" android:layout_marginRight="32dp" android:layout_below="@+id/tv_recording_duration" app:sf_record_wave_color="#ff1478ff" app:sf_record_wave_width="4dp"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/view_bottombar" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <View android:background="@drawable/sf_bottombar_shadow" android:layout_width="match_parent" android:layout_height="20dp"/>
        <RelativeLayout android:id="@+id/ll_auto_recording" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="16dp" android:layout_marginRight="16dp">
            <TextView android:textSize="14sp" android:textColor="#000000" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/GRider_PAX_Automatic_order_KkQe" android:layout_marginEnd="14dp" android:layout_toStartOf="@+id/switch_sf_auto_recording" android:layout_alignParentStart="true"/>
            <Switch android:gravity="center_vertical" android:layout_gravity="end" android:id="@+id/switch_sf_auto_recording" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="false" android:thumb="@drawable/sf_monitor_switch_thumb" android:track="@drawable/sf_monitor_switch_track" android:layout_alignParentEnd="true" style="?attr/borderlessButtonStyle"/>
        </RelativeLayout>
        <TextView android:enabled="false" android:textSize="18sp" android:textStyle="bold" android:textColor="?attr/submit_btn_text_color_selector" android:gravity="center" android:id="@+id/btn_recording" android:background="?attr/submit_btn_round_corner_bg_selector" android:layout_width="match_parent" android:layout_height="54dp" android:layout_margin="16dp" android:text="@string/Global_Driver_In_trip_recording_DRV_open_agree_mVFt" android:textAllCaps="false"/>
    </LinearLayout>
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="16dp" android:layout_above="@+id/view_bottombar" android:layout_below="@+id/view_recording_animation">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="14sp" android:textColor="#666666" android:ellipsize="end" android:id="@+id/tv_recording_law" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/Global_Driver_In_trip_recording_DRV_recording_trip_keKz"/>
            <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="#ff2697ff" android:id="@+id/tv_recording_law_link" android:layout_width="wrap_content" android:layout_height="0dp" android:layout_marginTop="6dp" android:text="@string/Global_Driver_In_trip_recording_DRV_privacy_clause_mPCh" android:drawableRight="@drawable/sf_icon_link_arrow" android:drawablePadding="4dp" android:layout_weight="1"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
