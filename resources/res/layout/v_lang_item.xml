<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@drawable/menu_item_selector" android:paddingLeft="@dimen/sidebar_sub_page_item_padding" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/setting_parent" android:layout_width="match_parent" android:layout_height="60dp">
        <TextView android:textSize="16sp" android:textColor="#333333" android:gravity="center_vertical" android:id="@+id/setting_list_item_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true"/>
        <com.didi.sdk.view.CommonCheckBox android:id="@+id/setting_list_item_arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/sidebar_sub_page_item_padding" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View android:id="@+id/divider" android:background="@color/setting_item_divider" android:layout_width="match_parent" android:layout_height="1px" android:layout_below="@+id/setting_parent"/>
</RelativeLayout>
