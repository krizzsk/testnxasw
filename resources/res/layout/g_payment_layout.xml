<?xml version="1.0" encoding="utf-8"?>
<com.didi.unifiedPay.component.widget.RootLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_gravity="bottom|left|center_vertical|center_horizontal|center|start" android:orientation="vertical" android:id="@+id/g_payment_root" android:background="@android:color/transparent" android:paddingTop="65dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:background="@color/oc_color_FFFFFF" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
        <global.didi.pay.view.GlobalPayTitleView android:id="@+id/g_payment_title" android:paddingLeft="18dp" android:paddingRight="18dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="18dp" android:paddingEnd="18dp"/>
        <ImageView android:id="@+id/g_payment_line" android:background="@color/oc_color_E5E5E5" android:layout_width="match_parent" android:layout_height="1px"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/oc_ll_pay_biz_view" android:paddingBottom="18dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:id="@+id/oc_pay_total_fee_container" android:paddingLeft="18dp" android:paddingTop="15dp" android:paddingRight="18dp" android:paddingBottom="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="18dp" android:paddingEnd="18dp"/>
            <ImageView android:id="@+id/oc_pay_supplement_container_subline" android:background="@color/oc_color_E5E5E5" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1px"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/oc_pay_supplement_container" android:background="@drawable/oc_view_selector" android:paddingLeft="18dp" android:paddingRight="18dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="18dp" android:paddingEnd="18dp"/>
            <ImageView android:background="@color/oc_color_E5E5E5" android:layout_width="match_parent" android:layout_height="1px"/>
            <global.didi.pay.view.GlobalPaymentBalanceView android:id="@+id/g_payment_layout_balance" android:paddingLeft="18dp" android:paddingRight="18dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="18dp" android:paddingEnd="18dp"/>
            <global.didi.pay.view.GlobalPaymentCheckView android:id="@+id/g_payment_layout_paymentcheck" android:background="@drawable/oc_view_selector" android:paddingLeft="18dp" android:paddingRight="18dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="18dp" android:paddingEnd="18dp"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/oc_ll_pay_area" android:paddingLeft="18dp" android:paddingRight="18dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="18dp" android:paddingEnd="18dp">
                <TextView android:textSize="10sp" android:textColor="@color/oc_color_666666" android:layout_gravity="center_horizontal" android:id="@+id/oc_tv_pay_statement" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="8dp"/>
                <TextView android:textSize="16sp" android:textStyle="bold" android:gravity="center" android:layout_gravity="center" android:id="@+id/oc_btn_pay" android:layout_width="match_parent" android:layout_height="@dimen/g_confirm_btn_height"/>
                <ImageView android:id="@+id/oc_btn_pay_loading" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/g_confirm_btn_height" android:src="@drawable/oc_loading_animation" android:contentDescription="@string/oc_voice_loading"/>
            </LinearLayout>
        </LinearLayout>
        <FrameLayout android:id="@+id/oc_fl_pay_state" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </LinearLayout>
</com.didi.unifiedPay.component.widget.RootLinearLayout>
