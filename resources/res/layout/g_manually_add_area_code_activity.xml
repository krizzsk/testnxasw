<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="44dp">
        <ImageView android:id="@+id/sf_left_btn" android:padding="6dp" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginLeft="10dp" android:layout_marginTop="7dp" android:src="@drawable/sf_common_titlebar_close_icon"/>
        <TextView android:textSize="@dimen/sf_dimen_14_sp" android:textColor="@color/sf_color_878787" android:gravity="right|center_vertical|center_horizontal|center" android:layout_gravity="right" android:id="@+id/sf_skip_btn" android:layout_width="62dp" android:layout_height="30dp" android:layout_marginTop="7dp" android:layout_marginRight="@dimen/st_area_add_manually_margin_dp" android:text="@string/g_skip" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <FrameLayout android:id="@+id/sf_loading" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <TextView android:textSize="24sp" android:textColor="@color/sf_color_333333" android:id="@+id/add_code_number_hint" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/st_area_add_manually_margin_dp" android:layout_marginTop="14dp" android:layout_marginRight="@dimen/st_area_add_manually_margin_dp" android:text="@string/g_add_an_area_code_hint"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/st_area_add_manually_margin_dp" android:layout_marginTop="50dp" android:layout_marginRight="@dimen/st_area_add_manually_margin_dp">
        <TextView android:textSize="16sp" android:textColor="@color/sf_color_333333" android:id="@+id/number_added_name_text" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:textSize="16sp" android:textColor="@color/sf_color_878787" android:id="@+id/number_added_count_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/st_area_add_manually_margin_dp" android:layout_marginTop="9dp" android:layout_marginRight="@dimen/st_area_add_manually_margin_dp">
        <EditText android:textSize="24dp" android:textColor="@color/sf_color_333333" android:gravity="center" android:id="@+id/first_area_code_text" android:background="@drawable/sf_gray_hollow_rect_bg_4_area_number_selector" android:layout_width="@dimen/st_manually_add_area_code_length" android:layout_height="@dimen/st_manually_add_area_code_length" android:maxLength="1" android:inputType="number" android:textCursorDrawable="@drawable/sf_add_area_code_cursor_drawable"/>
        <EditText android:textSize="24dp" android:textColor="@color/sf_color_333333" android:gravity="center" android:id="@+id/sec_area_code_text" android:background="@drawable/sf_gray_hollow_rect_bg_4_area_number_selector" android:layout_width="@dimen/st_manually_add_area_code_length" android:layout_height="@dimen/st_manually_add_area_code_length" android:layout_marginLeft="10dp" android:maxLength="1" android:inputType="number" android:textCursorDrawable="@drawable/sf_add_area_code_cursor_drawable"/>
        <TextView android:textSize="24dp" android:textColor="@color/sf_color_333333" android:id="@+id/original_number" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <TextView android:enabled="false" android:textSize="@dimen/bts_font_size_medium" android:textStyle="bold" android:textColor="@color/sf_brazil_confirm_text_selector" android:ellipsize="end" android:gravity="center" android:id="@+id/manually_add_button" android:background="@drawable/sf_brazil_confirm_selector" android:layout_width="match_parent" android:layout_height="@dimen/st_area_icon_height" android:layout_marginLeft="@dimen/st_area_add_manually_margin_dp" android:layout_marginTop="50dp" android:layout_marginRight="@dimen/st_area_add_manually_margin_dp" android:layout_marginBottom="@dimen/st_area_add_manually_margin_dp" android:text="@string/g_add_contacts_area_code" android:singleLine="true"/>
</LinearLayout>
