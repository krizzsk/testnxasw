<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@drawable/common_dialog_bg_shape" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_content_root" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="16sp" android:textColor="#333333" android:gravity="center" android:id="@+id/text_title" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="18dp" android:layout_marginRight="16dp" android:maxLines="1" android:includeFontPadding="false"/>
        <TextView android:textSize="14sp" android:textColor="#666666" android:gravity="center" android:id="@+id/text_message" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="19dp" android:layout_marginRight="16dp" android:includeFontPadding="false" android:lineSpacingExtra="4dp"/>
    </LinearLayout>
    <View android:id="@+id/line_divider_content" android:background="@color/dark_alpha_10" android:layout_width="match_parent" android:layout_height="@dimen/common_dialog_spilt_line" android:layout_marginTop="14dp" android:layout_below="@+id/ll_content_root"/>
    <FrameLayout android:id="@+id/fl_btn_area_vertical" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/line_divider_content">
        <LinearLayout android:orientation="vertical" android:id="@+id/ll_btn_area_vertical_2" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/line_divider_content">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <Button android:textSize="@dimen/font_size_large" android:textColor="@color/common_dialog_recommend_option_txt_color" android:gravity="center" android:id="@+id/button_top_bottom_1" android:background="@drawable/common_dialog_btn_bg_shape_n_nonrecommend_selector" android:layout_width="match_parent" android:layout_height="50dp" android:includeFontPadding="false" android:textAllCaps="false"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <View android:background="@color/dark_alpha_10" android:layout_width="match_parent" android:layout_height="1px"/>
                <Button android:textSize="@dimen/font_size_large" android:textColor="@color/light_gray" android:gravity="center" android:id="@+id/button_top_bottom_2" android:background="@drawable/common_dialog_btn_bg_shape_lr_nonrecommend_selector" android:layout_width="match_parent" android:layout_height="50dp" android:includeFontPadding="false" android:textAllCaps="false"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/ll_btn_area_vertical_1" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button android:textSize="@dimen/font_size_large" android:textColor="@color/common_dialog_recommend_option_txt_color" android:gravity="center" android:id="@+id/button_one" android:background="@drawable/common_dialog_btn_bg_shape_lr_nonrecommend_selector" android:layout_width="match_parent" android:layout_height="50dp" android:includeFontPadding="false" android:layout_weight="1" android:textAllCaps="false"/>
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
