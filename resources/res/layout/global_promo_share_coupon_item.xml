<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="122dp" android:layout_marginBottom="10dp">
    <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/global_promo_coupon_bg" android:scaleType="fitXY"/>
    <RelativeLayout android:paddingLeft="10dp" android:paddingTop="15dp" android:paddingRight="10dp" android:paddingBottom="9dp" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textSize="16sp" android:textColor="@color/g_color_333333" android:id="@+id/coupon_share_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
        <TextView android:textSize="12sp" android:textColor="@color/g_color_666666" android:id="@+id/coupon_share_sub_title_occupy" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="@string/global_promo_code_expire" android:layout_below="@+id/coupon_share_title"/>
        <TextView android:textSize="12sp" android:textColor="@color/g_color_666666" android:id="@+id/coupon_share_sub_title" android:paddingLeft="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_toRightOf="@+id/coupon_share_sub_title_occupy" android:layout_below="@+id/coupon_share_title"/>
        <TextView android:textSize="12sp" android:textColor="@color/g_color_999999" android:id="@+id/coupon_share_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_alignParentBottom="true"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/coupon_share_discount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentRight="true">
            <TextView android:textSize="13dp" android:textColor="@color/g_color_FF7226" android:id="@+id/coupon_share_discount_symbol_l" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="2dp"/>
            <TextView android:textSize="45dp" android:textColor="@color/g_color_FF7226" android:id="@+id/coupon_share_discount_num" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:textSize="13dp" android:textColor="@color/g_color_FF7226" android:id="@+id/coupon_share_discount_symbol_r" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp"/>
            <TextView android:textSize="13sp" android:textColor="@color/g_color_FF7226" android:id="@+id/coupon_share_discount_per" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:text="%"/>
            <TextView android:textSize="13sp" android:textColor="@color/g_color_FF7226" android:id="@+id/coupon_share_discount_des" android:paddingLeft="3dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="off"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
