<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/layout" android:layout_width="wrap_content" android:layout_height="match_parent">
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <TextView android:textSize="10sp" android:textStyle="bold" android:textColor="#000000" android:layout_gravity="bottom" android:id="@+id/currency" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="2dp" android:layout_marginBottom="1dp"/>
        <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="#000000" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/tips" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1"/>
    </LinearLayout>
    <View android:id="@+id/line" android:background="@color/sf_color_BBBBBB" android:layout_width="0.5dp" android:layout_height="20dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
</RelativeLayout>
