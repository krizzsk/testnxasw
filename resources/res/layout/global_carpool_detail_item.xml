<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:layout_gravity="top" android:layout_width="27dp" android:layout_height="27dp">
        <com.airbnb.lottie.LottieAnimationView android:layout_gravity="center" android:id="@+id/global_travel_detail_head" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <ImageView android:layout_gravity="center" android:id="@+id/global_travel_detail_icon" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="center"/>
    </FrameLayout>
    <LinearLayout android:layout_gravity="top" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:layout_marginTop="4dp">
        <TextView android:textSize="14sp" android:textColor="@color/black" android:ellipsize="end" android:id="@+id/global_travel_detail_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1"/>
        <TextView android:textSize="12sp" android:textColor="#919599" android:id="@+id/global_travel_detail_sub_title" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:lines="2"/>
    </LinearLayout>
</LinearLayout>
