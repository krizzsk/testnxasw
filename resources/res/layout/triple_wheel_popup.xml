<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
    <com.didi.sdk.view.titlebar.CommonPopupTitleBar android:id="@+id/title_bar" android:layout_width="match_parent" android:layout_height="60dp" android:layout_alignParentTop="true"/>
    <LinearLayout android:orientation="horizontal" android:paddingTop="27dp" android:paddingBottom="27dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/title_bar">
        <com.didi.sdk.view.wheel.Wheel android:id="@+id/wheel_first" android:background="#ffffff" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" app:textColor="#333333" app:textSize="20dp"/>
        <com.didi.sdk.view.wheel.Wheel android:id="@+id/wheel_second" android:background="#ffffff" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" app:textColor="#333333" app:textSize="20dp"/>
        <com.didi.sdk.view.wheel.Wheel android:id="@+id/wheel_third" android:background="#ffffff" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" app:textColor="#333333" app:textSize="20dp"/>
    </LinearLayout>
</RelativeLayout>
