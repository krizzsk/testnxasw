<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/sf_emergency_info_bg" android:clipChildren="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="-20dp" android:layout_marginRight="-20dp">
    <TextView android:textSize="14dp" android:textColor="@color/sf_color_999999" android:id="@+id/vehicle_info" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/sf_emergency_assistance_vehicle_info"/>
    <TextView android:textSize="18dp" android:textStyle="bold" android:textColor="@color/sf_color_333333" android:id="@+id/vehicle_id_number" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp"/>
    <TextView android:textSize="18dp" android:textStyle="bold" android:textColor="@color/sf_color_333333" android:id="@+id/vehicle_model" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <TextView android:textSize="14dp" android:textColor="@color/sf_color_999999" android:id="@+id/sf_location_tv" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="17dp"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp">
        <ImageView android:id="@+id/sf_address_status_icon" android:layout_width="25dp" android:layout_height="25dp" android:layout_marginTop="2dp" android:src="@drawable/sf_emergency_location_icon" android:layout_alignParentLeft="true"/>
        <TextView android:textSize="18dp" android:textStyle="bold" android:textColor="@color/sf_color_333333" android:id="@+id/sf_address_tv" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="7dp" android:layout_toRightOf="@+id/sf_address_status_icon"/>
    </RelativeLayout>
</LinearLayout>
