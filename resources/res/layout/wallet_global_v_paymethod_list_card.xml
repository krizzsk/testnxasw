<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:descendantFocusability="afterDescendants" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="60dp">
    <LinearLayout android:gravity="left|center_vertical|center_horizontal|center|start" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true">
        <ImageView android:id="@+id/iv_paymethod_icon" android:layout_width="24dp" android:layout_height="15dp" android:layout_marginLeft="18dp" android:scaleType="fitCenter" android:layout_marginStart="18dp"/>
        <LinearLayout android:gravity="left|center_vertical|center_horizontal|center|start" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginStart="15dp">
            <TextView android:textSize="16sp" android:textColor="@drawable/wallet_global_paymethod_list_title_text_color_selector" android:id="@+id/tv_paymethod_name" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <LinearLayout android:gravity="left|center_vertical|center_horizontal|center|start" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="12sp" android:textColor="@drawable/wallet_global_paymethod_list_tip_text_color_selector" android:ellipsize="end" android:id="@+id/tv_paymethod_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="2"/>
                <ImageView android:id="@+id/iv_paymethod_desc_tip" android:paddingLeft="4dp" android:paddingRight="8dp" android:visibility="gone" android:clickable="true" android:layout_width="26dp" android:layout_height="14dp" android:src="@drawable/wallet_global_paymethod_list_subtitle_tip" android:scaleType="centerInside" android:paddingStart="4dp" android:paddingEnd="8dp"/>
            </LinearLayout>
            <TextView android:textSize="12dp" android:textColor="#919599" android:ellipsize="end" android:id="@+id/tv_paymethod_copy_writing" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="2"/>
        </LinearLayout>
        <TextView android:textSize="12sp" android:textColor="#ffffff" android:ellipsize="end" android:id="@+id/tv_paymethod_label" android:background="@drawable/wallet_global_paymethod_bg_red_oval" android:paddingLeft="5dp" android:paddingTop="1dp" android:paddingRight="5dp" android:paddingBottom="1dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="9dp" android:maxLines="1" android:paddingStart="5dp" android:paddingEnd="5dp" android:layout_marginEnd="9dp"/>
    </LinearLayout>
    <TextView android:textSize="14sp" android:textColor="#999999" android:id="@+id/tv_paymethod_right_text_grey" android:paddingLeft="5dp" android:paddingRight="5dp" android:layout_width="wrap_content" android:layout_height="17dp" android:layout_marginRight="5dp" android:layout_toLeftOf="@+id/tv_paymethod_right_text_green_bg" android:layout_centerVertical="true" android:paddingStart="5dp" android:paddingEnd="5dp" android:layout_marginEnd="5dp" android:layout_toStartOf="@+id/tv_paymethod_right_text_green_bg"/>
    <TextView android:textSize="12sp" android:textColor="#ffffff" android:ellipsize="end" android:id="@+id/tv_paymethod_right_text_green_bg" android:background="@drawable/wallet_global_paymethod_list_bg_sale_text" android:paddingLeft="5dp" android:paddingTop="1dp" android:paddingRight="5dp" android:paddingBottom="1dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="9dp" android:maxLines="1" android:layout_toLeftOf="@+id/iv_paymethod_check" android:layout_centerVertical="true" android:paddingStart="5dp" android:paddingEnd="5dp" android:layout_marginEnd="9dp" android:layout_toStartOf="@+id/iv_paymethod_check"/>
    <ImageView android:id="@+id/iv_paymethod_check" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="13dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginEnd="13dp" android:layout_alignParentEnd="true"/>
</RelativeLayout>
