    <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="?attr/submit_btn_text_color_selector" android:gravity="center" android:id="@+id/tv_submit" android:background="?attr/submit_btn_bg_selector" android:layout_width="match_parent" android:layout_height="46dp" android:layout_marginTop="18dp" android:text="@string/estimate_select_seat_submit_btn" android:includeFontPadding="false" android:contentDescription="@string/estimate_select_seat_submit_btn"/>
