    <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="12sp" android:textColor="#ff767676" android:id="@+id/tv_price_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/estimate_select_seat_fixed_price"/>
