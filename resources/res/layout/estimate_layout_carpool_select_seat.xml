    <TextView android:textSize="14sp" android:textColor="#666666" android:id="@+id/tv_sub_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp"/>
    <RadioGroup android:gravity="center" android:orientation="horizontal" android:id="@+id/rg_seat" android:paddingTop="33dp" android:paddingBottom="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
