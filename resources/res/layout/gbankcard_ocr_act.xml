<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextureView android:id="@+id/camera_preview_tv" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <com.didichuxing.gbankcard.ocr.act.HollowEffectView android:id="@+id/hollow_effect_view" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <RelativeLayout android:id="@+id/titlebar_area" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginTop="20dp">
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/back_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:src="@drawable/gbankcard_back_icon" android:layout_alignParentLeft="true" android:layout_marginStart="10dp" android:layout_alignParentStart="true"/>
        <TextView android:textSize="21sp" android:textStyle="bold" android:textColor="@color/df_white_color" android:layout_gravity="center" android:id="@+id/gbankcard_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/gbankcard_base_act_title" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <FrameLayout android:id="@+id/card_preview_rect" android:background="@drawable/gbankcard_preview_rect_white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="72dp" android:layout_marginRight="20dp" android:layout_below="@+id/titlebar_area" android:layout_marginStart="20dp" android:layout_marginEnd="20dp">
        <TextView android:textSize="16sp" android:textColor="@color/df_white_color" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/gbankcard_position_your_card_note"/>
    </FrameLayout>
    <TextView android:textSize="13sp" android:textColor="@color/df_white_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/gbankcard_auto_scan_card_note" android:layout_below="@+id/card_preview_rect" android:layout_centerHorizontal="true"/>
    <Button android:textSize="16sp" android:textColor="@color/gbankcard_bottom_back_btn_text_color" android:id="@+id/bottom_back_btn" android:background="@drawable/gbankcard_bottom_back_btn_bg" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="46dp" android:layout_margin="18dp" android:text="@string/gbankcard_bottom_back_btn_text" android:layout_alignParentBottom="true" android:textAllCaps="false"/>
    <ImageView android:id="@+id/test_img" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true"/>
</RelativeLayout>
