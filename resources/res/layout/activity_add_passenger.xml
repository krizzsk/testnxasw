<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/iv_back" android:padding="10dp" android:layout_width="44dp" android:layout_height="44dp" android:layout_marginTop="17.5dp" android:layout_marginBottom="9.5dp" android:src="@drawable/icon_ad_back" android:layout_marginStart="13dp"/>
    <TextView android:textSize="24sp" android:textStyle="bold" android:textColor="#ff000000" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="2" android:maxEms="17" android:layout_marginStart="30dp" android:layout_marginEnd="30dp"/>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_introductions" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="7.5dp" android:layout_marginBottom="40dp" android:layout_marginStart="30dp" android:layout_marginEnd="30dp"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ll_phone_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="30dp" android:layout_marginEnd="20dp">
        <ImageView android:id="@+id/iv_country" android:layout_width="24dp" android:layout_height="15dp"/>
        <TextView android:textSize="16sp" android:textColor="#ff333333" android:id="@+id/tv_country_code" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="+52" android:layout_marginStart="6dp"/>
        <ImageView android:id="@+id/iv_drop_down" android:layout_width="19dp" android:layout_height="22dp" android:src="@drawable/icon_ap_open" android:paddingStart="6dp" android:paddingEnd="6dp"/>
        <View android:background="#d4d7d9" android:layout_width="1dp" android:layout_height="22dp" android:layout_marginStart="2dp"/>
        <EditText android:textSize="24sp" android:textColor="#ff000000" android:textColorHint="#ffdddddd" android:gravity="center_vertical" android:id="@+id/et_phone" android:background="@android:color/transparent" android:layout_width="0dp" android:layout_height="30dp" android:hint="@string/GRider_call_Telephone_Number_NhTq" android:singleLine="true" android:maxLength="12" android:layout_weight="1" android:inputType="number" android:textCursorDrawable="@drawable/edittext_cursor" android:layout_marginStart="10dp"/>
        <ImageView android:id="@+id/iv_add_contacts" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="40dp" android:layout_height="30dp" android:src="@drawable/icon_ap_contacts" android:paddingStart="10dp" android:paddingEnd="10dp"/>
    </LinearLayout>
    <View android:id="@+id/phone_bottom_line" android:background="@color/g_color_ddd" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:layout_marginStart="30dp" android:layout_marginEnd="30dp"/>
    <TextView android:textSize="12sp" android:textColor="#919599" android:id="@+id/tv_phone_num_station" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="30dp" android:layout_marginEnd="30dp"/>
    <EditText android:textSize="24sp" android:textColor="#ff000000" android:textColorHint="@color/g_color_ddd" android:ellipsize="end" android:id="@+id/et_name" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:hint="@string/GRider_call_Name_WEuo" android:maxEms="18" android:singleLine="true" android:textCursorDrawable="@drawable/edittext_cursor" android:layout_marginStart="30dp" android:layout_marginEnd="30dp"/>
    <View android:id="@+id/name_bottom_line" android:background="@color/g_color_ddd" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:layout_marginStart="30dp" android:layout_marginEnd="30dp"/>
    <TextView android:textSize="12sp" android:textColor="#919599" android:id="@+id/tv_first_name_station" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:layout_marginStart="30dp" android:layout_marginEnd="30dp"/>
    <TextView android:layout_gravity="bottom" android:id="@+id/tv_click_tips" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="24dp" android:layout_marginEnd="24dp"/>
    <FrameLayout android:layout_width="match_parent" android:layout_height="52dp" android:layout_marginTop="12dp" android:layout_marginBottom="24dp" android:layout_marginStart="24dp" android:layout_marginEnd="24dp">
        <TextView android:enabled="false" android:textSize="20sp" android:textStyle="bold" android:textColor="?attr/global_main_button_text_color_selector" android:gravity="center" android:id="@+id/tv_sc_confirm" android:background="?attr/global_overall_main_button_selector" android:layout_width="match_parent" android:layout_height="match_parent" android:textAllCaps="false" style="?android:attr/borderlessButtonStyle"/>
        <com.airbnb.lottie.LottieAnimationView android:id="@+id/animation_view" android:background="?attr/global_overall_main_button_selector" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" app:lottie_rawRes="?attr/button_loading_json"/>
    </FrameLayout>
</LinearLayout>
