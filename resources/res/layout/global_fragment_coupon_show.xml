<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.didi.sdk.webview.WebTitleBar android:id="@+id/center_title_bar" android:layout_width="match_parent" android:layout_height="44dp"/>
    <View android:background="@color/pe_color_19000000" android:layout_width="match_parent" android:layout_height="0.5dp"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="18dp" android:layout_marginRight="18dp">
        <TextView android:textSize="21sp" android:textColor="@color/g_color_promo_top" android:gravity="left" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="21dp" android:layout_marginBottom="17dp" android:text="@string/global_promo_code_enter"/>
        <EditText android:textSize="18sp" android:textColorHint="@color/g_color_CCCCCC" android:id="@+id/global_promo_etv" android:background="@drawable/global_promo_code_etv_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:hint="@string/global_promo_code_enter_hint" android:inputType="text" android:textCursorDrawable="@drawable/global_promo_code__etv_cursor"/>
        <TextView android:textSize="13sp" android:textColor="@color/g_color_666666" android:id="@+id/global_promo_terms_of_use" android:focusable="true" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="32dp" android:text="@string/global_promo_code_terms_of_use" android:drawableEnd="@drawable/global_promo_right"/>
        <Button android:enabled="false" android:textSize="16sp" android:id="@+id/global_promo_apply_btn" android:layout_width="match_parent" android:layout_height="46dp" android:layout_marginBottom="22dp" android:text="@string/global_promo_code_confirm"/>
        <View android:background="@color/g_color_promo_line" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginBottom="21dp"/>
        <TextView android:textSize="16sp" android:textColor="@color/g_color_promo_top" android:id="@+id/global_promo_vouchers" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/global_promo_code_vouchers" android:drawablePadding="12dp" android:drawableStart="@drawable/global_promo_vouchers" android:drawableEnd="@drawable/global_promo_right"/>
        <View android:background="@color/g_color_promo_line" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginTop="21dp"/>
    </LinearLayout>
</LinearLayout>
