<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@drawable/common_edit_dialog_bg_shape" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <TextView android:textSize="14sp" android:textColor="#666666" android:id="@+id/content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/invoice_dlg_padding_left" android:layout_marginTop="30dp" android:layout_marginRight="@dimen/invoice_dlg_padding_right" android:lineSpacingExtra="6dp"/>
        <EditText android:textColor="#333333" android:id="@+id/email" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/invoice_dlg_padding_left" android:layout_marginTop="10dp" android:layout_marginRight="@dimen/invoice_dlg_padding_right" android:inputType="textEmailAddress" android:textCursorDrawable="@drawable/edit_text_cursor"/>
        <View android:background="#19000000" android:paddingLeft="@dimen/invoice_dlg_padding_left" android:paddingRight="@dimen/invoice_dlg_padding_right" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="@dimen/invoice_dlg_padding_left" android:layout_marginRight="@dimen/invoice_dlg_padding_right" android:layout_marginBottom="12.5dp"/>
        <View android:background="#19000000" android:layout_width="match_parent" android:layout_height="1px"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/ll_btn_area_horizontal_2" android:visibility="visible" android:layout_width="match_parent" android:layout_height="50dp">
            <TextView android:textSize="16sp" android:textColor="@color/light_gray" android:gravity="center" android:id="@+id/cancel" android:background="@drawable/invoice_btn_cancel_selector" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/cancel" android:layout_weight="1" android:textAllCaps="false"/>
            <View android:id="@+id/line_divider_horizontal_btn" android:background="#19000000" android:layout_width="1px" android:layout_height="match_parent" android:layout_below="@+id/ll_title_content_area"/>
            <Button android:textSize="16sp" android:textColor="?attr/recommend_text_color" android:gravity="center" android:id="@+id/send" android:background="@drawable/invoice_btn_comfirm_selector" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/history_dlg_send_btn" android:includeFontPadding="false" android:layout_weight="1" android:textAllCaps="false"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
