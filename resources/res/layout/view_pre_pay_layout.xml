        <TextView android:textSize="16sp" android:textColor="@color/oc_color_333333" android:id="@+id/tv_main_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/oc_uni_pre_pay_part_fee"/>
