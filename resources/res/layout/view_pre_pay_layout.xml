<?xml version="1.0" encoding="utf-8"?>
<com.didi.unifiedPay.component.widget.RootRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/oc_pay_root" android:background="@color/oc_color_f5ffffff" android:layout_width="match_parent" android:layout_height="match_parent">
