<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/splash_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/splashIv" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="fitXY"/>
    </FrameLayout>
    <SurfaceView android:id="@+id/surfaceView" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <RelativeLayout android:id="@+id/logo_container_root" android:background="@drawable/public_service_ad_whitegradient_2x" android:visibility="gone" android:layout_width="match_parent" android:layout_height="177dp" android:layout_alignParentBottom="true">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="90dp" android:layout_alignParentBottom="true">
            <ImageView android:id="@+id/advertise_logo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/advertise_logo" android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/buttom_ly" android:background="#ffffff" android:visibility="gone" android:layout_width="match_parent" android:layout_height="90dp" android:layout_alignParentBottom="true">
        <ImageView android:id="@+id/buttom_iv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/advertise_logo" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/goto_web" android:background="@drawable/assert_bg_shape" android:visibility="gone" android:layout_width="match_parent" android:layout_height="70dp" android:layout_above="@+id/buttom_ly">
        <View android:background="#1a000000" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignParentTop="true"/>
        <ImageView android:id="@+id/skip_iv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="21dp" android:layout_marginBottom="19.5dp" android:src="@drawable/icon_enter" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
        <TextView android:textSize="18sp" android:textColor="@android:color/white" android:id="@+id/ad_tips" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="21dp" android:layout_marginBottom="14dp" android:text="@string/asset_splash_ad_tips" android:singleLine="true" android:layout_toLeftOf="@+id/skip_iv" android:layout_alignParentLeft="true" android:layout_alignParentBottom="true"/>
        <View android:background="#1a000000" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <LinearLayout android:gravity="center" android:id="@+id/layout_skip_ad_tv" android:background="@drawable/screen_ad_bg_selector" android:visibility="visible" android:layout_width="64dp" android:layout_height="30dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp" android:layout_alignParentRight="true" android:layout_alignParentBottom="true">
        <TextView android:textSize="14sp" android:textColor="@color/screen_ad_counter_num" android:layout_gravity="center" android:id="@+id/coutDowntime" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:textSize="11sp" android:textColor="@color/screen_ad_jump" android:gravity="center" android:layout_gravity="center" android:id="@+id/skip_ad_tv" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:text="@string/publicservice_asset_splash_skip_ad_tv"/>
    </LinearLayout>
</RelativeLayout>
