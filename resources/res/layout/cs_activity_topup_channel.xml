<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/wallet_global_top_up_channel_whole_background" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/one_payment_creditcard_global_v_title_bar"/>
    <View android:background="@color/wallet_global_top_up_channel_empty_space_background" android:layout_width="match_parent" android:layout_height="@dimen/wallet_topup_empty_height"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_top_up_channel_content" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:layout_gravity="center_horizontal" android:id="@+id/iv_topup_top_icon" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/wallet_topup_iv_margin_top" android:src="@drawable/topup_channel_icon"/>
        <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="@color/wallet_global_top_up_channel_content_tv_promotion_font_color" android:id="@+id/tv_top_up_channel_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/wallet_topup_tv_margin_left" android:layout_marginTop="@dimen/wallet_topup_tv_margin_top" android:drawablePadding="6dp" android:layout_marginStart="@dimen/wallet_topup_tv_margin_left"/>
        <LinearLayout android:gravity="center_vertical" android:id="@+id/ll_top_up_channel_subtitle" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="18dp" android:layout_marginTop="5dp" android:layout_marginRight="18dp">
            <TextView android:textSize="14sp" android:textColor="#999999" android:id="@+id/tv_top_up_channel_subtitle" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <ImageView android:layout_width="12dp" android:layout_height="12dp" android:layout_marginTop="2dp" android:src="@drawable/wallet_global_main_list_right_arrow_icon"/>
        </LinearLayout>
        <LinearLayout android:gravity="top" android:orientation="vertical" android:id="@+id/ll_top_up_channel_channels" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginTop="@dimen/wallet_topup_ll_margin_top" android:layout_weight="1"/>
        <TextView android:textSize="12sp" android:textColor="@color/oc_color_999999" android:gravity="center" android:id="@+id/tv_top_up_rule" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="18dp" android:layout_marginTop="18dp" android:layout_marginRight="18dp" android:layout_marginBottom="15dp"/>
        <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/ll_top_up_condition" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="40dp">
            <TextView android:textSize="12sp" android:textColor="@color/oc_color_999999" android:layout_gravity="center_vertical" android:id="@+id/tv_top_up_condition" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <ImageView android:layout_gravity="center_vertical" android:layout_width="9dp" android:layout_height="9dp" android:layout_marginLeft="2dp" android:src="@drawable/wallet_global_main_list_right_arrow_icon"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:id="@+id/ll_top_up_channel_empty" android:padding="@dimen/wallet_topup_error_ll_padding" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="@dimen/wallet_topup_error_ll_margin_bottom">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/wallet_pic_service_waiting" android:scaleType="center"/>
        <TextView android:textSize="@dimen/wallet_topup_error_tv_font_size" android:textColor="@color/wallet_global_top_up_channel_error_tv_font_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/wallet_topup_error_tv_margin_top" android:text="@string/wallet_global_topup_retry_title"/>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/wallet_topup_error_refresh_ll_margin_top">
            <ImageView android:background="@drawable/w_common_sdk_net_refresh_icon" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:textSize="@dimen/wallet_topup_error_refresh_tv_font_size" android:textColor="@color/wallet_global_top_up_channel_error_refresh_tv_font_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/wallet_topup_error_refresh_tv_margin_left" android:text="@string/wallet_global_topup_retry" android:layout_marginStart="@dimen/wallet_topup_error_refresh_tv_margin_left"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
