<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp">
    <LinearLayout android:orientation="vertical" android:id="@+id/tv_history_description" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="15dp" android:layout_marginRight="25dp" android:layout_marginBottom="15dp" android:layout_centerVertical="true">
        <RelativeLayout android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/black" android:ellipsize="end" android:id="@+id/tv_event_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_alignParentStart="true"/>
            <TextView android:textSize="13sp" android:textColor="@color/black" android:id="@+id/tv_handle_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <RelativeLayout android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp">
            <TextView android:textSize="13sp" android:textColor="@color/black" android:ellipsize="end" android:id="@+id/tv_rode_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="2" android:layout_alignParentStart="true"/>
            <LinearLayout android:orientation="horizontal" android:id="@+id/ll_contribute_result" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentEnd="true">
                <ImageView android:gravity="center" android:layout_gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/iv_contribute_count" android:layout_width="12dp" android:layout_height="12dp" android:src="@drawable/contribution_eye_icon" android:adjustViewBounds="true"/>
                <TextView android:textSize="12sp" android:textColor="@color/black" android:id="@+id/tv_contribute_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="5dp"/>
            </LinearLayout>
            <TextView android:textSize="13sp" android:textColor="@color/black" android:id="@+id/tv_direction" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:singleLine="true" android:layout_below="@+id/tv_rode_name"/>
            <TextView android:textSize="13sp" android:textColor="#b3000000" android:id="@+id/tv_report_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:singleLine="true" android:layout_below="@+id/tv_direction"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
