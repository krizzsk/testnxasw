<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/wallet_global_balance_entry_mobiledialog_shape" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <ImageView android:layout_width="267dp" android:layout_height="120dp" android:src="@drawable/wallet_global_balance_mobile_topup_banner"/>
    <LinearLayout android:gravity="center" android:padding="16dp" android:layout_width="267dp" android:layout_height="wrap_content">
        <TextView android:textSize="14dp" android:textColor="#666666" android:gravity="start" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/one_payment_global_dialog_mobilephone_title"/>
    </LinearLayout>
    <View android:gravity="start" android:background="#0a000000" android:layout_width="match_parent" android:layout_height="1px"/>
    <LinearLayout android:gravity="center" android:id="@+id/ll_confirm" android:layout_width="267dp" android:layout_height="50.5dp">
        <TextView android:textSize="16dp" android:textStyle="bold" android:textColor="#ff7f41" android:gravity="start" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/one_payment_global_dialog_mobilephone_confirm"/>
    </LinearLayout>
    <View android:gravity="start" android:background="#0a000000" android:layout_width="match_parent" android:layout_height="1px"/>
    <LinearLayout android:gravity="center" android:id="@+id/ll_cancel" android:layout_width="267dp" android:layout_height="50.5dp">
        <TextView android:textSize="16dp" android:textColor="#666666" android:gravity="start" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/one_payment_global_dialog_mobilephone_cancel"/>
    </LinearLayout>
</LinearLayout>
