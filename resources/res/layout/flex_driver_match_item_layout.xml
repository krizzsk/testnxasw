<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:padding="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentStart="true">
            <TextView android:textSize="24sp" android:textStyle="bold" android:textColor="#ff000000" android:id="@+id/fee_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:includeFontPadding="false"/>
            <TextView android:textSize="14sp" android:textColor="#80000000" android:id="@+id/car_brand_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:includeFontPadding="false"/>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp">
                <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="#ff000000" android:id="@+id/eda" android:layout_width="wrap_content" android:layout_height="wrap_content" android:includeFontPadding="false" android:layout_marginEnd="4dp"/>
                <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="#ff000000" android:id="@+id/eta_distance" android:layout_width="wrap_content" android:layout_height="wrap_content" android:includeFontPadding="false"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentEnd="true">
            <ImageView android:id="@+id/flex_car_img" android:layout_width="120dp" android:layout_height="60.5dp" android:layout_marginTop="2.5dp" android:src="@drawable/flex_driver_default_car"/>
            <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="-36dp">
                <FrameLayout android:background="@drawable/flex_driver_avatar_bg" android:paddingTop="6dp" android:paddingBottom="8dp" android:layout_width="54dp" android:layout_height="54dp" android:paddingStart="7dp" android:paddingEnd="7dp">
                    <com.didi.component.common.widget.CircleImageView android:layout_gravity="center" android:id="@+id/avatar_iv" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/flex_driver_avatar"/>
                </FrameLayout>
                <LinearLayout android:gravity="center_vertical" android:id="@+id/flex_driver_score_layout" android:background="@drawable/flex_five_star_bg" android:paddingTop="3dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="28dp" android:layout_marginTop="-19.5dp" android:paddingStart="4dp" android:paddingEnd="3dp">
                    <LinearLayout android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="match_parent" android:paddingStart="7.5dp" android:paddingEnd="7.5dp">
                        <ImageView android:id="@+id/score_iv" android:layout_width="12dp" android:layout_height="12dp" android:src="@drawable/flex_driver_five_star"/>
                        <TextView android:textSize="12sp" android:textColor="#ff000000" android:id="@+id/score_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:includeFontPadding="false" android:layout_marginStart="2dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/flex_btn_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp"/>
    <ProgressBar android:id="@+id/avatar_progressBar" android:layout_width="match_parent" android:layout_height="4dp" android:layout_marginTop="17dp" android:progressDrawable="@drawable/flex_progress_bg" style="?android:attr/progressBarStyleHorizontal"/>
    <TextView android:textSize="12sp" android:textColor="#80000000" android:id="@+id/countdown_tv" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="9dp"/>
</LinearLayout>
