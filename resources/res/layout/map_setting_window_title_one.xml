            <ImageView android:id="@+id/map_setting_view_remember_nav" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:src="@drawable/map_setting_switch_off" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginEnd="16dp" android:layout_alignParentEnd="true"/>
            <TextView android:textSize="16dp" android:textColor="#333333" android:gravity="start" android:id="@+id/map_setting_window_remember_tv" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:text="@string/map_setting_window_remember" android:layout_centerVertical="true" android:textDirection="locale" android:textAlignment="viewStart" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:layout_toStartOf="@+id/map_setting_view_remember_nav"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
