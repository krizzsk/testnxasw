<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/map_setting_window_title" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/map_setting_title_container" android:layout_width="match_parent" android:layout_height="120dp">
        <RelativeLayout android:id="@+id/map_setting_window_ll" android:layout_width="match_parent" android:layout_height="60dp">
