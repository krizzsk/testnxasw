            <FrameLayout android:id="@+id/map_setting_window_close" android:layout_width="48dp" android:layout_height="match_parent" android:layout_marginEnd="4dp" android:layout_alignParentEnd="true">
                <ImageView android:layout_gravity="center" android:layout_width="13dp" android:layout_height="13dp" android:src="@drawable/map_setting_close_selected"/>
            </FrameLayout>
        </RelativeLayout>
        <View android:id="@+id/map_setting_item_line" android:background="@color/map_setting_item_line_bg_opacity8" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_below="@+id/map_setting_window_ll"/>
