<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="#69000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:layout_gravity="bottom" android:orientation="vertical" android:id="@+id/content_root" android:background="#ffffff" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="16dp" android:textColor="#333333" android:gravity="center" android:id="@+id/tips_title" android:clickable="true" android:layout_width="match_parent" android:layout_height="44dp" android:text="温馨提示"/>
        <View android:background="#dddddd" android:layout_width="match_parent" android:layout_height="0.5dp"/>
        <TextView android:textSize="14dp" android:textColor="#333333" android:id="@+id/tips_detail" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="22dp" android:layout_marginRight="20dp"/>
        <Button android:textSize="17dp" android:textColor="#ffffff" android:id="@+id/btn_h5" android:background="@drawable/btn_selector" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="30dp" android:layout_marginRight="20dp" android:layout_marginBottom="20dp" android:text="请点击"/>
        <View android:background="#dddddd" android:layout_width="match_parent" android:layout_height="0.5dp"/>
        <TextView android:textSize="17dp" android:textColor="#666666" android:gravity="center" android:id="@+id/tv_cancel" android:background="@drawable/cancel_selector" android:layout_width="match_parent" android:layout_height="44dp" android:text="不再展示"/>
    </LinearLayout>
</FrameLayout>
