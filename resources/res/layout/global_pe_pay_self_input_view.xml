<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center_horizontal" android:orientation="vertical" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/oc_ll_one_price" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp">
        <TextView android:textSize="12sp" android:textColor="@color/pe_color_999999" android:gravity="center_horizontal" android:id="@+id/oc_pay_entrance_one_price_view" android:background="@drawable/pe_pay_one_price_shape" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="50dp" android:text="@string/pe_title_oneprice"/>
        <TextView android:textSize="12sp" android:textColor="@color/pe_color_333333" android:id="@+id/oc_tv_one_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:text="@string/pe_pay_unit_str"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:paddingLeft="60dp" android:paddingRight="60dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="40dp">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="18dp">
            <TextView android:textSize="14sp" android:textColor="@color/pe_color_666666" android:id="@+id/oc_pay_entrance_input_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pe_pay_entrance_title"/>
            <EditText android:textSize="30sp" android:textColor="@color/pe_color_333333" android:textColorHint="@color/pe_color_cccccc" android:gravity="center" android:id="@+id/oc_pay_entrance_input" android:background="@null" android:layout_width="0dp" android:layout_height="40dp" android:layout_marginLeft="@dimen/margin_normal" android:layout_marginRight="@dimen/margin_normal" android:hint="@string/pe_pay_entrance_hint_input" android:maxLines="1" android:layout_weight="1" android:inputType="numberDecimal" android:textCursorDrawable="@drawable/pe_pay_input_cursor"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pe_unit_cny"/>
        </LinearLayout>
        <View android:background="@color/pe_color_80000000" android:layout_width="match_parent" android:layout_height="1px"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/oc_pay_entrance_supplement_container" android:layout="@layout/global_pe_pay_supplement_item" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp"/>
    </LinearLayout>
    <TextView android:id="@+id/oc_pay_entrance_goto_pay" android:layout_marginTop="25dp" android:text="@string/pe_pay_entrance_goto_pay" style="@style/PE_ConfirmButton"/>
</LinearLayout>
