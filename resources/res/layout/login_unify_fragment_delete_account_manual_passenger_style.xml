<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/btn_container">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="@dimen/login_unify_dimen_20dp" android:layout_marginRight="@dimen/login_unify_dimen_20dp" android:layout_marginStart="@dimen/login_unify_dimen_20dp" android:layout_marginEnd="@dimen/login_unify_dimen_20dp">
            <TextView android:id="@+id/tv_title" android:layout_marginTop="@dimen/login_unify_dimen_18dp" style="@style/LoginUnifyDeleteAccountTitlePassengerStyle"/>
            <TextView android:id="@+id/tv_sub_title" android:layout_marginTop="@dimen/login_unify_dimen_7dp" style="@style/LoginUnifyDeleteAccountSubTitlePassengerStyle"/>
            <androidx.recyclerview.widget.RecyclerView android:orientation="vertical" android:id="@+id/rv_cancel_warning" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <TextView android:id="@+id/tv_warn" android:layout_marginTop="@dimen/login_unify_dimen_20dp" android:layout_marginBottom="@dimen/login_unify_dimen_20dp" style="@style/LoginUnifyDeleteAccountColorWarningPassengerStyle"/>
        </LinearLayout>
