<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/fusion_dev_title" android:background="#bdbdbd" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="56dp">
        <TextView android:textSize="20sp" android:textColor="@android:color/black" android:id="@+id/title_back" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="返回" android:lines="1" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:textAlignment="center"/>
        <TextView android:textSize="24sp" android:textColor="@android:color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Fusion开发者模式" android:lines="1" android:layout_centerInParent="true" android:textAlignment="center"/>
    </RelativeLayout>
    <LinearLayout android:id="@+id/render_info" android:background="@drawable/dev_item_background" android:layout_width="match_parent" android:layout_height="75dp" android:layout_marginTop="2dp" android:weightSum="3">
        <TextView android:textSize="24sp" android:textColor="@android:color/black" android:layout_gravity="left|center_vertical|center_horizontal|center" android:id="@+id/render_info_text" android:paddingLeft="10dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2"/>
        <TextView android:textSize="24sp" android:textColor="@android:color/holo_red_dark" android:gravity="right|center_vertical|center_horizontal|center" android:layout_gravity="center_vertical" android:id="@+id/render_info_time" android:paddingRight="10dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/bridge_info" android:background="@drawable/dev_item_background" android:layout_width="match_parent" android:layout_height="75dp" android:layout_marginTop="2dp" android:weightSum="3">
        <TextView android:textSize="24sp" android:textColor="@android:color/black" android:layout_gravity="left|center_vertical|center_horizontal|center" android:id="@+id/bridge_info_text" android:paddingLeft="10dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2"/>
        <TextView android:textSize="24sp" android:textColor="@android:color/holo_red_dark" android:gravity="right|center_vertical|center_horizontal|center" android:layout_gravity="center_vertical" android:id="@+id/bridge_info_count" android:paddingRight="10dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/offline_bundle" android:background="@drawable/dev_item_background" android:layout_width="match_parent" android:layout_height="75dp" android:layout_marginTop="2dp" android:weightSum="3">
        <TextView android:textSize="24sp" android:textColor="@android:color/black" android:layout_gravity="left|center_vertical|center_horizontal|center" android:id="@+id/offline_bundle_text" android:paddingLeft="10dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2"/>
        <TextView android:textSize="24sp" android:textColor="@android:color/holo_red_dark" android:gravity="right|center_vertical|center_horizontal|center" android:layout_gravity="center_vertical" android:id="@+id/offline_bundle_size" android:paddingRight="10dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/file_cache" android:background="@drawable/dev_item_background" android:layout_width="match_parent" android:layout_height="75dp" android:layout_marginTop="2dp" android:weightSum="3">
        <TextView android:textSize="24sp" android:textColor="@android:color/black" android:layout_gravity="left|center_vertical|center_horizontal|center" android:id="@+id/file_cache_text" android:paddingLeft="10dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2"/>
        <TextView android:textSize="24sp" android:textColor="@android:color/holo_red_dark" android:gravity="right|center_vertical|center_horizontal|center" android:layout_gravity="center_vertical" android:id="@+id/file_cache_size" android:paddingRight="10dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/total_offline" android:background="@drawable/dev_item_background" android:layout_width="match_parent" android:layout_height="75dp" android:layout_marginTop="2dp" android:weightSum="3">
        <TextView android:textSize="24sp" android:textColor="@android:color/black" android:layout_gravity="left|center_vertical|center_horizontal|center" android:id="@+id/total_offline_text" android:paddingLeft="10dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2"/>
        <TextView android:textSize="24sp" android:textColor="@android:color/holo_red_dark" android:gravity="right|center_vertical|center_horizontal|center" android:layout_gravity="center_vertical" android:id="@+id/total_offline_size" android:paddingRight="10dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/fusion_test" android:background="@drawable/dev_item_background" android:layout_width="match_parent" android:layout_height="75dp" android:layout_marginTop="2dp" android:weightSum="3">
        <TextView android:textSize="24sp" android:textColor="@android:color/black" android:layout_gravity="left|center_vertical|center_horizontal|center" android:id="@+id/fusion_test_title" android:paddingLeft="10dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2"/>
        <TextView android:textSize="24sp" android:textColor="@android:color/holo_red_dark" android:gravity="right|center_vertical|center_horizontal|center" android:layout_gravity="center_vertical" android:id="@+id/fusion_test_content" android:paddingRight="10dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
