    <LinearLayout android:orientation="vertical" android:id="@+id/rl_error" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="@dimen/login_unify_dimen_20dp" android:layout_marginRight="@dimen/login_unify_dimen_20dp" android:layout_marginStart="@dimen/login_unify_dimen_20dp" android:layout_marginEnd="@dimen/login_unify_dimen_20dp">
        <TextView android:id="@+id/tv_error_title" android:text="@string/login_unify_set_email_net_error_title" style="@style/LoginUnifyTiTileStyle"/>
        <TextView android:id="@+id/tv_error_sub_title" android:layout_marginTop="@dimen/login_unify_dimen_14dp" android:text="@string/login_unify_set_email_net_error_content" style="@style/LoginUnifySubTiTileStyle"/>
        <com.didi.unifylogin.utils.customview.LoginNextButton android:enabled="true" android:id="@+id/btn_error_retry" android:layout_marginTop="@dimen/login_unify_dimen_30dp" android:text="@string/login_unify_set_email_net_error_btn" style="?attr/login_unify_style_btn_text"/>
    </LinearLayout>
</RelativeLayout>
