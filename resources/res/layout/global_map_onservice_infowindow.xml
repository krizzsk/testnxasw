<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center_vertical" android:background="@drawable/global_mapflow_pop_tworow" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <LinearLayout android:gravity="right|center_vertical|center_horizontal|center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:gravity="center" android:id="@+id/left_first_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:bufferType="spannable"/>
        <TextView android:gravity="center" android:id="@+id/left_second_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:bufferType="spannable"/>
    </LinearLayout>
    <View android:background="#000000" android:layout_width="1px" android:layout_height="32dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:gravity="center" android:id="@+id/right_first_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:bufferType="spannable"/>
        <TextView android:gravity="center" android:id="@+id/right_second_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:bufferType="spannable"/>
    </LinearLayout>
    <ImageView android:layout_gravity="center_vertical" android:id="@+id/arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:src="@drawable/global_mapflow_pop_arrow"/>
</LinearLayout>
