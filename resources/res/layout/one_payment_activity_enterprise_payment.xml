<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/root" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/one_payment_layout_title_bar"/>
    <TextView android:textSize="16dp" android:textColor="@color/one_payment_text_dark" android:gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/tv_tips" android:padding="18dp" android:layout_width="match_parent" android:layout_height="80dp" android:text="@string/one_payment_global_enterprise_subtitle" android:layout_below="@+id/layout_title_bar"/>
    <LinearLayout android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/tv_tips" android:paddingStart="18dp" android:paddingEnd="18dp">
        <LinearLayout android:gravity="left|center_vertical|center_horizontal|center|start" android:orientation="horizontal" android:id="@+id/layout_company" android:layout_width="match_parent" android:layout_height="60dp">
            <TextView android:textSize="14dp" android:textColor="@color/one_payment_text_dark" android:gravity="start" android:id="@+id/tv_company" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/one_payment_global_enterprise_hint_company" android:layout_weight="1"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:src="@drawable/one_payment_global_check_right_arrow" android:layout_marginStart="4dp"/>
        </LinearLayout>
        <View android:gravity="start" android:background="@color/one_payment_04000000" android:layout_width="match_parent" android:layout_height="0.5dp"/>
        <LinearLayout android:gravity="left|center_vertical|center_horizontal|center|start" android:orientation="horizontal" android:id="@+id/layout_cost_center" android:clickable="false" android:layout_width="match_parent" android:layout_height="60dp">
            <TextView android:textSize="14dp" android:textColor="@color/one_payment_gray" android:gravity="start" android:id="@+id/tv_cost_center" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/one_payment_global_enterprise_hint_cost_center" android:layout_weight="1"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:src="@drawable/one_payment_global_check_right_arrow" android:layout_marginStart="4dp"/>
        </LinearLayout>
        <View android:gravity="start" android:background="@color/one_payment_04000000" android:layout_width="match_parent" android:layout_height="0.5dp"/>
        <LinearLayout android:gravity="left|center_vertical|center_horizontal|center|start" android:orientation="horizontal" android:id="@+id/layout_project" android:clickable="false" android:layout_width="match_parent" android:layout_height="60dp">
            <TextView android:textSize="14dp" android:textColor="@color/one_payment_gray" android:gravity="start" android:id="@+id/tv_project" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/one_payment_global_enterprise_hint_project" android:layout_weight="1"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:src="@drawable/one_payment_global_check_right_arrow" android:layout_marginStart="4dp"/>
        </LinearLayout>
        <View android:gravity="start" android:background="@color/one_payment_04000000" android:layout_width="match_parent" android:layout_height="0.5dp"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="100dp" android:layout_marginTop="12dp">
            <EditText android:textSize="14dp" android:textColor="@color/one_payment_text_dark" android:textColorHint="@color/one_payment_gray_99" android:gravity="top|left|center_vertical|center_horizontal|center|start" android:id="@+id/et_comment" android:background="@drawable/one_payment_enterprise_edittext_bg" android:padding="6dp" android:layout_width="match_parent" android:layout_height="match_parent" android:hint="@string/one_payment_global_enterprise_hint_comments" android:textCursorDrawable="@drawable/one_payment_global_cursor_color" android:textDirection="locale" android:textAlignment="viewStart"/>
            <TextView android:textSize="12dp" android:textColor="@color/one_payment_gray_99" android:gravity="start" android:id="@+id/tv_comment_count" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="6dp" android:layout_marginBottom="11dp" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" android:layout_marginEnd="6dp" android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView android:textSize="16dp" android:textColor="?attr/submit_btn_text_color_selector" android:gravity="center" android:id="@+id/btn_continue" android:background="?attr/submit_btn_bg_selector" android:layout_width="match_parent" android:layout_height="50dp" android:layout_margin="18dp" android:text="@string/one_payment_global_enterprise_continue_btn" android:layout_alignParentBottom="true"/>
</RelativeLayout>
