        <LinearLayout android:orientation="horizontal" android:id="@+id/oc_ll_platform_pay" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_alignParentEnd="true">
            <TextView android:textSize="12sp" android:textColor="@color/orange" android:id="@+id/oc_tv_platform_pay_value" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true"/>
            <ImageView android:id="@+id/oc_iv_platform_pay_checkbox" android:visibility="gone" android:layout_width="18dp" android:layout_height="18dp" android:layout_marginLeft="6dp" android:src="@drawable/oc_pay_channel_selector" android:layout_centerVertical="true" android:layout_marginStart="6dp"/>
