            </RelativeLayout>
            <TextView android:textSize="10sp" android:textColor="@color/oc_color_999999" android:id="@+id/oc_platform_pay_state" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/oc_rl_pay_item_title"/>
        </RelativeLayout>
    </RelativeLayout>
    <TextView android:textSize="10sp" android:textColor="@color/oc_color_999999" android:id="@+id/oc_tv_platform_pay_downgradle" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/oc_rl_pay_platform_item"/>
</RelativeLayout>
