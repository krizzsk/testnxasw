<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:paddingTop="@dimen/oc_pay_item_margin_dimen" android:paddingBottom="@dimen/oc_pay_item_margin_dimen" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/oc_rl_pay_platform_item" android:layout_width="match_parent" android:layout_height="wrap_content">
