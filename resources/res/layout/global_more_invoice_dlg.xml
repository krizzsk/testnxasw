<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@drawable/common_edit_dialog_bg_shape" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:paddingTop="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <TextView android:textSize="14sp" android:textColor="#666666" android:id="@+id/tv_invoice_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="20dp" android:layout_marginRight="16dp" android:text="@string/global_invoice_name_title" android:lineSpacingExtra="6dp"/>
        <LinearLayout android:id="@+id/ll_invoice_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="10dp" android:layout_marginRight="16dp">
            <EditText android:textSize="16sp" android:textColor="#000000" android:layout_gravity="center_vertical" android:id="@+id/et_invoice_title" android:background="@null" android:saveEnabled="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLength="30" android:layout_weight="2" android:textCursorDrawable="@drawable/edit_text_cursor"/>
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_invoice_title_clear" android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/global_ic_invoice_clear" android:layout_weight="1"/>
        </LinearLayout>
        <View android:id="@+id/v_invoice_title_line" android:background="#19000000" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="16dp" android:layout_marginTop="6dp" android:layout_marginRight="16dp"/>
        <TextView android:textSize="14sp" android:textColor="#666666" android:id="@+id/tv_invoice_email" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="20dp" android:layout_marginRight="16dp" android:text="@string/global_invoice_email_title" android:lineSpacingExtra="6dp"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="10dp" android:layout_marginRight="16dp">
            <EditText android:enabled="false" android:textSize="16sp" android:textColor="#999999" android:layout_gravity="center_vertical" android:id="@+id/et_invoice_email" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLength="128" android:layout_weight="2" android:inputType="textEmailAddress" android:textCursorDrawable="@drawable/edit_text_cursor"/>
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_invoice_email_edit" android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/global_ic_invoice_edit" android:layout_weight="1"/>
        </LinearLayout>
        <View android:background="#19000000" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="16dp" android:layout_marginTop="6dp" android:layout_marginRight="16dp"/>
        <TextView android:id="@+id/tv_invoice_email_desc" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="20dp" android:layout_marginRight="16dp"/>
        <View android:background="#19000000" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginTop="30dp"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/ll_btn_area_horizontal_2" android:visibility="visible" android:layout_width="match_parent" android:layout_height="50dp">
            <TextView android:textSize="16sp" android:textColor="@color/light_gray" android:gravity="center" android:id="@+id/cancel" android:background="@drawable/invoice_btn_cancel_selector" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/cancel" android:layout_weight="1" android:textAllCaps="false"/>
            <View android:id="@+id/line_divider_horizontal_btn" android:background="#19000000" android:layout_width="1px" android:layout_height="match_parent" android:layout_below="@+id/ll_title_content_area"/>
            <Button android:textSize="16sp" android:textColor="?attr/recommend_text_color" android:gravity="center" android:id="@+id/send" android:background="@drawable/invoice_btn_comfirm_selector" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/history_dlg_send_btn" android:includeFontPadding="false" android:layout_weight="1" android:textAllCaps="false"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
