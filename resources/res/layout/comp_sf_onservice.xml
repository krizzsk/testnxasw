<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:id="@+id/box_triangle" android:layout_width="match_parent" android:layout_height="10.5dp">
        <ImageView android:visibility="invisible" android:layout_width="0px" android:layout_height="match_parent" android:src="@drawable/triangle" android:scaleType="centerInside" android:layout_weight="1"/>
        <ImageView android:visibility="invisible" android:layout_width="0px" android:layout_height="match_parent" android:src="@drawable/triangle" android:scaleType="centerInside" android:layout_weight="1"/>
        <ImageView android:visibility="invisible" android:layout_width="0px" android:layout_height="match_parent" android:src="@drawable/triangle" android:scaleType="centerInside" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:background="#f5f5f5" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="14sp" android:textColor="#ff333333" android:id="@+id/tv_tip" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="18dp" android:layout_marginTop="16dp" android:layout_marginBottom="13dp" android:text="@string/g_splitfare_user_tip"/>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/sf_list" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="99dp" android:overScrollMode="never"/>
    </LinearLayout>
    <TextView android:textSize="14sp" android:textColor="#ff525d" android:gravity="center" android:id="@+id/tv_stop" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="30dp" android:layout_marginTop="10dp" android:text="@string/g_splitfare_user_exit_btn"/>
</LinearLayout>
