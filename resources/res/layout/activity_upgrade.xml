        <LinearLayout android:orientation="vertical" android:paddingTop="20dp" android:paddingBottom="40dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/step1_view" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@android:color/black" android:id="@+id/step1_title_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/join_testing_step1_title" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toTopOf="0"/>
                <TextView android:textSize="16sp" android:textColor="@android:color/black" android:id="@+id/step1_content_tv" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/join_testing_step1_content" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/step1_title_tv"/>
                <TextView android:textSize="14sp" android:textColor="@color/green" android:ellipsize="end" android:id="@+id/step1_account_hint_tv" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="@string/join_testing_step1_select_account" android:maxLines="3" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/step1_content_tv"/>
