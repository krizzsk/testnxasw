<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:background="@color/white" android:padding="18dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="22sp" android:textStyle="bold" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/global_carpool_waitrsp_cancel_dialog_title"/>
        <TextView android:textSize="14sp" android:textColor="#666666" android:id="@+id/tv_carpool_dialog_tips" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp">
            <Button android:textSize="16sp" android:textColor="#666666" android:id="@+id/btn_carpool_no" android:background="@drawable/global_carpool_waitrsp_canceldialog_no_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/global_carpool_waitrsp_cancel_dialog_no" android:layout_weight="1"/>
            <Button android:textSize="16sp" android:textColor="@color/white" android:id="@+id/btn_carpool_cancel" android:background="@drawable/global_carpool_waitrsp_canceldialog_cancel_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="@string/global_carpool_waitrsp_cancel_dialog_cancel" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <View android:id="@+id/view_cancel_intercept_fallback" android:layout_width="match_parent" android:layout_height="0px"/>
</FrameLayout>
