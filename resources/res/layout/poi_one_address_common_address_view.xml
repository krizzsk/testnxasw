        <LinearLayout android:orientation="horizontal" android:id="@+id/layout_company" android:background="#00ffffff" android:paddingTop="22dp" android:paddingBottom="22dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
