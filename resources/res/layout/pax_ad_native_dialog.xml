<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="280dp" android:layout_height="360dp" android:layout_centerInParent="true">
    <com.google.android.gms.ads.nativead.NativeAdView android:id="@+id/ad_view" android:layout_width="280dp" android:layout_height="360dp">
        <LinearLayout android:orientation="vertical" android:layout_width="280dp" android:layout_height="360dp">
            <androidx.cardview.widget.CardView android:background="#f3f4f5" android:layout_width="280dp" android:layout_height="360dp" android:layout_centerInParent="true" app:cardCornerRadius="20dp" app:cardElevation="0dp">
                <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
                    <com.google.android.gms.ads.nativead.MediaView android:layout_gravity="center_horizontal" android:id="@+id/ad_media" android:layout_width="match_parent" android:layout_height="137dp" android:adjustViewBounds="true"/>
                    <TextView android:textSize="12sp" android:textStyle="bold" android:textColor="#ffffff" android:ellipsize="end" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/ad_call_to_action" android:background="@drawable/pax_ad_btn_bg_gradient" android:layout_width="match_parent" android:layout_height="38dp" android:layout_marginTop="1dp" android:layout_marginBottom="15dp" android:maxLines="1" android:maxEms="19" android:layout_alignParentBottom="true" android:paddingStart="6dp" android:paddingEnd="6dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>
                    <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="1dp" android:layout_above="@+id/ad_call_to_action" android:layout_below="@+id/ad_media">
                        <androidx.cardview.widget.CardView android:layout_gravity="center_horizontal" android:id="@+id/icon_wrapper" android:layout_width="59dp" android:layout_height="59dp" app:cardCornerRadius="12dp" app:cardElevation="0dp">
                            <ImageView android:id="@+id/ad_app_icon" android:layout_width="59dp" android:layout_height="59dp" android:scaleType="centerCrop" android:adjustViewBounds="true"/>
                        </androidx.cardview.widget.CardView>
                        <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="#000000" android:ellipsize="end" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/ad_headline" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="2" android:maxEms="29" android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>
                        <RatingBar android:theme="@style/AD_RatingBar_Style" android:layout_gravity="center_horizontal" android:id="@+id/ad_stars" android:layout_width="wrap_content" android:layout_height="wrap_content" android:numStars="5" android:stepSize="0.5" android:isIndicator="true" style="?android:attr/ratingBarStyleSmall"/>
                        <TextView android:textSize="12sp" android:textColor="#000000" android:ellipsize="end" android:gravity="center" android:id="@+id/ad_body" android:layout_width="match_parent" android:layout_height="wrap_content" android:lines="3" android:maxEms="94" android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>
                    </LinearLayout>
                    <TextView android:textSize="10sp" android:textColor="#ff8040" android:gravity="center" android:background="@drawable/pax_ad_indicator_bg" android:paddingTop="2dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="AD" android:paddingStart="5dp" android:paddingEnd="5dp" android:layout_marginEnd="2dp" android:layout_alignParentEnd="true"/>
                    <TextView android:textSize="10sp" android:textColor="#ff8040" android:gravity="center" android:id="@+id/debug_text" android:paddingTop="2dp" android:paddingBottom="2dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="2dp" android:layout_alignParentBottom="true" android:paddingStart="5dp" android:paddingEnd="5dp" android:layout_marginStart="5dp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </com.google.android.gms.ads.nativead.NativeAdView>
</LinearLayout>
