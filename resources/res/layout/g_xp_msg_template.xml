<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <FrameLayout android:id="@+id/xp_msg_bg_color" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:layout_gravity="right" android:id="@+id/xp_msg_bg_img" android:layout_width="120dp" android:layout_height="match_parent"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/xp_msg_visible_view" android:paddingLeft="20dp" android:paddingRight="20dp" android:paddingBottom="32dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ViewSwitcher android:layout_gravity="center_horizontal" android:id="@+id/xp_msg_title_switcher" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp"/>
            <TextSwitcher android:id="@+id/xp_msg_subtitle_switcher" android:paddingTop="2dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>
