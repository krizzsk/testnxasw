<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/one_payment_base_common_item_bg_selector" android:layout_width="match_parent" android:layout_height="60dp">
    <ImageView android:id="@+id/iv_channel_icon" android:layout_width="24dp" android:layout_height="24dp" android:scaleType="centerInside" android:layout_centerVertical="true" android:layout_marginStart="@dimen/wallet_dp_18"/>
    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:layout_toRightOf="@+id/iv_channel_icon" android:layout_centerVertical="true" android:layout_toEndOf="@+id/iv_channel_icon">
        <TextView android:textSize="16sp" android:textColor="@color/oc_color_000000" android:gravity="start" android:id="@+id/tv_channel_name" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:textSize="12sp" android:textColor="@color/oc_color_999999" android:gravity="start" android:id="@+id/tv_channel_desc" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp"/>
    </LinearLayout>
    <ImageView android:id="@+id/iv_arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="18dp" android:src="@drawable/wallet_global_main_list_right_arrow_icon" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginEnd="18dp" android:layout_alignParentEnd="true"/>
    <TextView android:textSize="10sp" android:textColor="@color/oc_color_FFFFFF" android:gravity="center" android:id="@+id/tv_channel_extra" android:background="@drawable/wallet_global_balance_entry_saletip_shape" android:paddingLeft="6dp" android:paddingRight="6dp" android:layout_width="wrap_content" android:layout_height="16dp" android:layout_marginRight="44dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:paddingStart="6dp" android:paddingEnd="6dp" android:layout_marginEnd="44dp" android:layout_alignParentEnd="true"/>
    <View android:gravity="start" android:background="#fdfdfd" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_alignParentBottom="true" android:layout_marginStart="18dp"/>
    <View android:id="@+id/view_shadow" android:background="#80ffffff" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="match_parent"/>
</RelativeLayout>
