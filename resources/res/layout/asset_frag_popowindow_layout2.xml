<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/close_dialog" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="60dp" android:src="@drawable/public_service_common_icon_layer_close_2x" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
    <RelativeLayout android:id="@+id/main" android:background="@color/whitebg" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="54dp" android:layout_marginTop="90dp" android:layout_marginRight="54dp" android:layout_marginBottom="50dp" android:layout_above="@+id/close_dialog">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/loading" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/common_zhanwei_didi_logo"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/content_view" android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView android:layout_gravity="center_horizontal" android:id="@+id/asset_img" android:layout_width="match_parent" android:layout_height="120dp" android:layout_marginLeft="4dp" android:layout_marginTop="4dp" android:layout_marginRight="4dp" android:scaleType="fitXY"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/layout_brand" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="7dp">
                <TextView android:textSize="18dp" android:textStyle="bold" android:ellipsize="end" android:layout_gravity="center_horizontal" android:id="@+id/layout1_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="22dp" android:layout_marginTop="8dp" android:layout_marginRight="22dp" android:maxLines="1"/>
                <TextView android:id="@+id/layout1_line1" android:layout_marginTop="10dp" style="@style/Asset_text_style"/>
                <TextView android:id="@+id/layout1_line2" style="@style/Asset_text_style"/>
                <TextView android:id="@+id/layout1_line3" style="@style/Asset_text_style"/>
                <TextView android:id="@+id/button1" style="@style/Asset_pop_window_btn_bg"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/layout_banner" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="7dp">
                <TextView android:textSize="18dp" android:textStyle="bold" android:ellipsize="end" android:layout_gravity="center_horizontal" android:id="@+id/layout2_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="22dp" android:layout_marginTop="8dp" android:layout_marginRight="22dp" android:maxLines="1"/>
                <TextView android:id="@+id/layout2_line1" android:layout_marginTop="10dp" style="@style/Asset_text_style"/>
                <TextView android:id="@+id/layout2_line2" style="@style/Asset_text_style"/>
                <TextView android:id="@+id/layout2_line3" style="@style/Asset_text_style"/>
                <TextView android:id="@+id/layout2_line4" style="@style/Asset_text_style"/>
                <TextView android:id="@+id/layout2_line5" style="@style/Asset_text_style"/>
                <TextView android:id="@+id/layout2_line6" style="@style/Asset_text_style"/>
                <TextView android:id="@+id/button2" style="@style/Asset_pop_window_btn_bg"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView android:id="@+id/logo" android:layout_width="wrap_content" android:layout_height="34dp" android:layout_marginBottom="5dp" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
        <View android:id="@+id/divider" android:background="#1a000000" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginBottom="5dp" android:layout_above="@+id/logo"/>
    </RelativeLayout>
</RelativeLayout>
