    <LinearLayout android:id="@+id/im_feed_tip_layout" android:background="#ffefe6" android:paddingTop="@dimen/im_10_dp" android:paddingBottom="@dimen/im_10_dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
