        <View android:id="@+id/im_feed_helper_red" android:background="@drawable/im_red_circle_bg" android:visibility="invisible" android:layout_width="@dimen/im_7_dp" android:layout_height="@dimen/im_7_dp" android:layout_marginLeft="@dimen/im_2_dp" android:layout_toRightOf="@+id/im_feed_switch_helper" android:layout_alignTop="@+id/im_feed_switch_helper" android:layout_marginStart="@dimen/im_2_dp" android:layout_toEndOf="@+id/im_feed_switch_helper"/>
