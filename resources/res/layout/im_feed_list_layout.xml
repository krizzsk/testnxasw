    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <com.duolingo.open.rtlviewpager.RtlViewPager android:id="@+id/im_feed_viewpager" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="@dimen/im_1_dp" android:overScrollMode="never"/>
