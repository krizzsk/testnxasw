    <TextView android:textSize="12sp" android:textColor="@color/oc_color_999999" android:id="@+id/pix_input_view_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp"/>
    <View android:id="@+id/pix_input_view_bottom_line" android:background="@color/pix_item_divider" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginTop="6dp" android:layout_below="@+id/pix_input_view_et"/>
    <TextView android:textSize="12sp" android:textColor="#ff3f3f" android:id="@+id/input_view_error_info" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/pix_input_view_bottom_line"/>
</merge>
