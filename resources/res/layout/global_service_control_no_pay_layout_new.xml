<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@drawable/global_service_control_no_pay_bg" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <FrameLayout android:id="@+id/global_service_control_no_pay_loading" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="24sp" android:textStyle="bold" android:textColor="#ff000000" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:layout_marginStart="30dp" android:layout_marginEnd="50dp"/>
            <TextView android:textSize="14sp" android:textColor="#ff000000" android:id="@+id/content" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginStart="30dp" android:layout_marginEnd="30dp"/>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:layout_marginStart="30dp" android:layout_marginEnd="30dp">
                <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/color_333333" android:id="@+id/cartype" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true"/>
                <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="#ff000000" android:id="@+id/price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginStart="28dp" android:layout_marginEnd="30dp">
                <ImageView android:layout_gravity="center_vertical" android:id="@+id/time_icon" android:layout_width="12dp" android:layout_height="12dp" android:src="@drawable/service_control_no_pay_time_new" android:layout_marginStart="6dp"/>
                <TextView android:textSize="14sp" android:textColor="#ff5c6166" android:id="@+id/time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="16dp"/>
            </LinearLayout>
            <LinearLayout android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginStart="28dp" android:layout_marginEnd="30dp">
                <ImageView android:id="@+id/start_address_icon" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginTop="1dp" android:src="@drawable/service_control_no_pay_start"/>
                <TextView android:textSize="14sp" android:textColor="#ff5c6166" android:ellipsize="end" android:id="@+id/start_address" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:layout_marginStart="10dp"/>
            </LinearLayout>
            <LinearLayout android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginStart="28dp" android:layout_marginEnd="30dp">
                <ImageView android:id="@+id/end_address_icon" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginTop="1dp" android:src="@drawable/service_control_no_pay_end"/>
                <TextView android:textSize="14sp" android:textColor="#ff5c6166" android:ellipsize="end" android:id="@+id/end_address" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:layout_marginStart="10dp"/>
            </LinearLayout>
            <TextView android:textSize="@dimen/lego_dimen_14sp" android:ellipsize="end" android:id="@+id/pay_question_link" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/lego_dimen_30dp" android:layout_marginTop="40dp" android:layout_marginRight="@dimen/lego_dimen_30dp" android:maxLines="1" android:includeFontPadding="false" android:drawableEnd="@drawable/lego_right_arrow"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/btn_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="40dp" android:layout_marginBottom="24dp">
                <TextView android:textSize="@dimen/lego_dimen_20sp" android:textStyle="bold" android:textColor="?attr/global_main_button_text_color_selector" android:ellipsize="end" android:gravity="center" android:id="@+id/pay_now_button" android:background="?attr/global_overall_main_button_selector" android:paddingLeft="24dp" android:paddingRight="24dp" android:layout_width="match_parent" android:layout_height="52dp" android:singleLine="true" android:layout_marginStart="24dp" android:layout_marginEnd="24dp"/>
                <TextView android:textSize="@dimen/lego_dimen_20sp" android:textStyle="bold" android:textColor="?attr/global_secondary_button_text_color_selector" android:ellipsize="end" android:gravity="center" android:id="@+id/bind_card_next_button" android:background="?attr/global_overall_secondary_button_selector" android:paddingLeft="24dp" android:paddingRight="24dp" android:layout_width="match_parent" android:layout_height="52dp" android:layout_marginTop="@dimen/lego_dimen_16dp" android:singleLine="true" android:layout_marginStart="24dp" android:layout_marginEnd="24dp"/>
                <TextView android:textSize="@dimen/lego_dimen_20sp" android:textStyle="bold" android:textColor="?attr/global_secondary_button_text_color_selector" android:ellipsize="end" android:gravity="center" android:id="@+id/paid_button" android:background="?attr/global_overall_secondary_button_selector" android:paddingLeft="24dp" android:paddingRight="24dp" android:layout_width="match_parent" android:layout_height="52dp" android:layout_marginTop="@dimen/lego_dimen_16dp" android:singleLine="true" android:layout_marginStart="24dp" android:layout_marginEnd="24dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ImageView android:layout_gravity="top|right|center_vertical|center_horizontal|center" android:id="@+id/iv_dialog_close" android:padding="10dp" android:focusable="true" android:clickable="true" android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/popup_icon_close_bg"/>
</FrameLayout>
