<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@drawable/map_setting_item_selected" android:layout_width="match_parent" android:layout_height="60dp">
    <ImageView android:id="@+id/nav_icon" android:layout_width="40dp" android:layout_height="40dp" android:layout_centerVertical="true" android:layout_marginStart="15.5dp" android:layout_alignParentStart="true"/>
    <TextView android:textSize="14dp" android:textColor="@color/map_setting_item_text" android:id="@+id/nav_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:textDirection="locale" android:textAlignment="viewStart" android:layout_marginStart="9dp" android:layout_toEndOf="@+id/nav_icon"/>
    <ImageView android:id="@+id/sel_flag_img" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/map_setting_radio_selected_icon" android:layout_centerVertical="true" android:layout_marginEnd="16dp" android:layout_alignParentEnd="true"/>
    <View android:id="@+id/nav_divider" android:background="@color/map_setting_item_line_bg" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginEnd="16dp"/>
</RelativeLayout>
