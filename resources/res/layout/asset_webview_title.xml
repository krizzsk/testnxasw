<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/asset_title_bar_bg" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:orientation="vertical" android:padding="5dp" android:layout_width="match_parent" android:layout_height="44dp">
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerVertical="true">
            <TextView android:textSize="16sp" android:textColor="@color/asset_dark_gray" android:ellipsize="end" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/asset_title_bar_txt_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:ems="9" android:singleLine="true"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true">
            <ImageView android:id="@+id/asset_title_bar_btn_left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/asset_title_btn_back_selector" style="@style/TitleBar.Button"/>
            <ImageView android:id="@+id/btnClose" android:background="@drawable/asset_circle_tool_btn_selector" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:src="@drawable/asset_title_close_normal" style="@style/TitleBar.Button"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:minHeight="44dp" android:layout_alignParentRight="true" android:layout_centerVertical="true">
            <Button android:textSize="40px" android:id="@+id/btnShare" android:background="@color/asset_transparent" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="28dp" android:minHeight="28dp" android:text="@string/publice_service_share" style="@style/TitleBar.Button"/>
            <Button android:textSize="13dp" android:textColor="@color/asset_link_gray" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/aseet_ddrive_complain" android:background="@null" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true"/>
            <ImageView android:id="@+id/imgMenu" android:background="@drawable/asset_circle_tool_btn_selector" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/asset_icon_webview_more" android:scaleType="fitCenter" android:minWidth="28dp" android:minHeight="28dp"/>
        </LinearLayout>
    </RelativeLayout>
    <View android:id="@+id/asset_iv_title_bar_line" android:background="@color/asset_title_bar_line_bg" android:clickable="true" android:layout_width="match_parent" android:layout_height="0.3dp" android:layout_alignParentBottom="true"/>
</LinearLayout>
