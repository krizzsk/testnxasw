<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent" android:minHeight="80dp">
    <ImageView android:id="@+id/avatar" android:layout_width="42dp" android:layout_height="42dp" android:layout_centerVertical="true" android:layout_marginStart="16dp" android:layout_alignParentStart="true"/>
    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginStart="8dp" android:layout_toEndOf="@+id/avatar">
        <TextView android:textSize="18dp" android:id="@+id/oppositeName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:includeFontPadding="false" style="@style/TextAppearance.Compat.Notification.Title"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp">
            <ImageView android:id="@+id/callIcon" android:layout_width="14dp" android:layout_height="14dp"/>
            <TextView android:textSize="14dp" android:id="@+id/callText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:includeFontPadding="false" android:layout_marginStart="4dp" style="@style/TextAppearance.Compat.Notification.Title"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
