<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <com.didi.unifiedPay.component.widget.RelativeLayoutAccessibleForCheck android:id="@+id/oc_pay_item" android:background="@drawable/oc_pay_item_bg_drawable" android:paddingLeft="13dp" android:paddingTop="13dp" android:paddingRight="13dp" android:paddingBottom="13dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="13dp" android:paddingEnd="13dp">
        <RelativeLayout android:id="@+id/oc_rl_pay_item" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/oc_iv_pay_icon" android:layout_width="24dp" android:layout_height="15dp" android:layout_centerVertical="true"/>
            <TextView android:textSize="16sp" android:textColor="@color/oc_color_666666" android:id="@+id/oc_tv_pay_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:layout_toRightOf="@+id/oc_iv_pay_icon" android:layout_centerVertical="true" android:layout_marginStart="6dp" android:layout_toEndOf="@+id/oc_iv_pay_icon"/>
            <ImageView android:id="@+id/oc_iv_pay_checkbox" android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/gua_pay_channel_selector" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
            <ProgressBar android:id="@+id/oc_pb_pay_item_loading" android:visibility="gone" android:layout_width="16dp" android:layout_height="16dp" android:indeterminateDrawable="@drawable/oc_home_web_loading_anim" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
            <ImageView android:id="@+id/oc_iv_platform_know_more" android:visibility="gone" android:layout_width="12dp" android:layout_height="12dp" android:src="@mipmap/icon_rightarrow_orange" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
            <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:layout_marginRight="6dp" android:layout_toLeftOf="@+id/oc_iv_pay_checkbox" android:layout_toRightOf="@+id/oc_tv_pay_title" android:layout_centerVertical="true" android:layout_marginStart="6dp" android:layout_marginEnd="6dp" android:layout_toStartOf="@+id/oc_iv_pay_checkbox" android:layout_toEndOf="@+id/oc_tv_pay_title">
                <TextView android:textSize="10sp" android:textColor="@color/oc_color_999999" android:id="@+id/oc_tv_pay_promotion" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxEms="12"/>
            </FrameLayout>
        </RelativeLayout>
        <TextView android:textSize="10sp" android:textColor="@color/oc_color_999999" android:id="@+id/oc_tv_pay_downgradle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/oc_rl_pay_item"/>
    </com.didi.unifiedPay.component.widget.RelativeLayoutAccessibleForCheck>
    <View android:layout_width="match_parent" android:layout_height="@dimen/oc_pay_intem_margin_bottom"/>
</LinearLayout>
