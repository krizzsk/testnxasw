<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="14sp" android:textColor="@color/oc_color_000000" android:ellipsize="end" android:id="@+id/evaluate_comment_hint" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:hint="@string/global_new_evaluate_edit_text_hint" android:lines="1"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/evaluate_comment_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <View android:id="@+id/evaluate_comment_empty_view" android:background="@color/trans" android:clickable="true" android:layout_width="match_parent" android:layout_height="86dp"/>
            <EditText android:textSize="14sp" android:textColor="@color/oc_color_000000" android:gravity="bottom|left|center_vertical|center_horizontal|center" android:id="@+id/oc_evaluate_comment_view" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:lines="5" android:maxLength="255" android:imeOptions="actionDone" android:textCursorDrawable="@drawable/global_new_evaluate_edittext_cursor"/>
        </LinearLayout>
    </FrameLayout>
    <View android:background="@color/oc_color_E5E5E5" android:layout_width="match_parent" android:layout_height="0.5dp"/>
</LinearLayout>
