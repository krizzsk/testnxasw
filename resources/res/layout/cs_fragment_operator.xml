<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_operator_content" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textSize="24sp" android:textStyle="bold" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="18dp" android:layout_marginRight="18dp" android:text="@string/cs_operator_title"/>
        <androidx.recyclerview.widget.RecyclerView android:orientation="vertical" android:id="@+id/rv_operator_list" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginLeft="13dp" android:layout_marginTop="18dp" android:layout_marginRight="13dp" android:layout_weight="1"/>
        <TextView android:enabled="false" android:textSize="20sp" android:textStyle="bold" android:textColor="?attr/submit_btn_text_color_selector" android:gravity="center" android:id="@+id/btn_operator_next" android:background="?attr/submit_btn_bg_new_selector" android:layout_width="match_parent" android:layout_height="52dp" android:layout_margin="24dp" android:text="@string/pay_base_confirm"/>
