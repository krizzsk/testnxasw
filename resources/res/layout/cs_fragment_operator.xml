        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/w_common_sdk_net_error_icon" android:scaleType="center"/>
        <TextView android:textSize="14sp" android:textColor="#999999" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="18dp" android:text="Loading failed"/>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp">
            <ImageView android:background="@drawable/cs_topup_error_refresh_icon" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:textSize="18sp" android:textColor="#666666" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="Try again"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
