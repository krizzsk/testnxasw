<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="27dp">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textColor="@color/lego_color_000000" android:id="@+id/fee_value" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentEnd="true"/>
        <com.didi.component.payentrance.view.FlowLinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toStartOf="@+id/fee_value" android:layout_alignParentStart="true">
            <TextView android:textSize="14sp" android:textColor="@color/lego_color_5C6166" android:layout_gravity="top" android:id="@+id/fee_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="10" android:paddingEnd="6dp"/>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_gravity="center_vertical" android:id="@+id/fee_icon" android:layout_width="20dp" android:layout_height="12dp" android:layout_marginTop="1dp"/>
                <TextView android:textColor="@color/lego_color_000000" android:layout_gravity="center_vertical" android:id="@+id/fee_card_suffix" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingEnd="6dp" android:layout_marginStart="4dp"/>
            </LinearLayout>
        </com.didi.component.payentrance.view.FlowLinearLayout>
    </RelativeLayout>
</RelativeLayout>
