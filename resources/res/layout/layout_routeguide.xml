<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_vertical" android:paddingLeft="@dimen/ms_18dp" android:paddingRight="@dimen/ms_18dp" android:layout_width="match_parent" android:layout_height="132dp">
        <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <TextView android:textSize="20sp" android:textColor="#000000" android:ellipsize="end" android:id="@+id/card_top_title_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="2"/>
            <TextView android:textSize="@dimen/ms_14sp" android:textColor="#000000" android:ellipsize="end" android:id="@+id/card_top_subtitle_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
        </LinearLayout>
        <ImageView android:id="@+id/card_top_icon_iv" android:layout_width="@dimen/ms_70dp" android:layout_height="@dimen/ms_70dp" android:layout_marginLeft="@dimen/ms_15dp" android:src="@drawable/icon_airport_panel_guide_tip" android:scaleType="fitXY"/>
    </LinearLayout>
    <View android:background="#eaeaea" android:layout_width="match_parent" android:layout_height="0.5dp"/>
    <LinearLayout android:gravity="center" android:id="@+id/card_bottom_layout" android:layout_width="match_parent" android:layout_height="@dimen/ms_50dp">
        <TextView android:textSize="@dimen/ms_14sp" android:textColor="@color/g_color_999999" android:id="@+id/card_bottom_tv" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
