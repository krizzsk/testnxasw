<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center_horizontal" android:id="@+id/fl_root_container" android:background="@color/white" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:id="@+id/ll_empty" android:visibility="gone" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textSize="@dimen/font_size_small" android:textColor="@color/light_gray" android:gravity="center" android:id="@+id/tv_agent_retry" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/one_payment_global_net_empty_tip" android:singleLine="false" android:drawableTop="@drawable/wallet_pic_service_waiting" android:drawablePadding="50px" android:contentDescription="@string/one_payment_global_net_empty_tip"/>
    </LinearLayout>
    <androidx.core.widget.NestedScrollView android:id="@+id/ll_content" android:visibility="gone" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:id="@+id/ll_content_layout" android:layout_width="match_parent" android:layout_height="match_parent">
            <com.didi.payment.wallet.global.wallet.view.view.PixMainEntrySectionView android:id="@+id/pix_entry_section" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/wallet_dp_20"/>
            <com.didi.payment.wallet.global.wallet.view.view.home.WalletHomeConsumeSectionView android:gravity="center" android:layout_gravity="center" android:id="@+id/v_consume_section" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <com.didi.payment.wallet.global.wallet.view.view.WalletNewPayMethodListView android:layout_gravity="center" android:id="@+id/v_payment_method_section" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_marginBottom="15dp"/>
            <com.didi.payment.wallet.global.wallet.view.view.WalletOperationBannerSectionView android:gravity="center" android:layout_gravity="center" android:id="@+id/v_operation_section" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="11dp"/>
            <TextView android:textSize="12sp" android:textColor="#919599" android:gravity="center" android:id="@+id/tv_tc_link" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/wallet_global_terms_conditions" android:maxLines="1"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout android:gravity="right|center_vertical|center_horizontal|center|end" android:orientation="horizontal" android:id="@+id/ll_wallet_title_bar" android:layout_width="match_parent" android:layout_height="90dp">
        <ImageView android:id="@+id/iv_wallet_help_shadow" android:visibility="gone" android:layout_width="90dp" android:layout_height="90dp" android:src="@drawable/wallet_image_shadow" app:layout_constraintBottom_toBottomOf="@+id/iv_wallet_help" app:layout_constraintEnd_toEndOf="@+id/iv_wallet_help" app:layout_constraintStart_toStartOf="@+id/iv_wallet_help" app:layout_constraintTop_toTopOf="@+id/iv_wallet_help"/>
        <ImageView android:id="@+id/iv_wallet_help" android:visibility="gone" android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/wallet_home_help_icon" android:layout_marginEnd="12dp" app:layout_constraintBottom_toBottomOf="@+id/iv_wallet_setting" app:layout_constraintEnd_toStartOf="@+id/iv_wallet_setting" app:layout_constraintTop_toTopOf="@+id/iv_wallet_setting"/>
        <ImageView android:id="@+id/iv_wallet_setting_shadow" android:visibility="gone" android:layout_width="90dp" android:layout_height="90dp" android:src="@drawable/wallet_image_shadow" app:layout_constraintBottom_toBottomOf="@+id/iv_wallet_setting" app:layout_constraintEnd_toEndOf="@+id/iv_wallet_setting" app:layout_constraintStart_toStartOf="@+id/iv_wallet_setting" app:layout_constraintTop_toTopOf="@+id/iv_wallet_setting"/>
        <ImageView android:id="@+id/iv_wallet_setting" android:visibility="gone" android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/wallet_home_setting_icon" android:layout_marginEnd="10dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintTop_toTopOf="0"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <FrameLayout android:orientation="vertical" android:id="@+id/ll_wallet_page_loading" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</FrameLayout>
