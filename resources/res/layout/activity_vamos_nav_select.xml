<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/global_map_nav_select_half_transparent" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_nav_main" android:background="@color/global_map_nav_select_panel_white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true"/>
    <View android:id="@+id/nav_list_divider" android:background="@color/global_map_nav_item_divider_heavy" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_above="@+id/rv_nav_main"/>
    <RelativeLayout android:id="@+id/rl_nav_title" android:background="@color/global_map_nav_select_panel_white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/nav_list_divider">
        <TextView android:textSize="20sp" android:textColor="@color/global_map_nav_pure_black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_marginBottom="15dp" android:text="@string/map_setting_window_title" android:layout_centerVertical="true" android:layout_marginStart="18dp" style="@style/Map.TextViewStyle.TextDirection"/>
        <ImageView android:id="@+id/iv_nav_close" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/vamos_nav_select_close" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginEnd="20dp" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <View android:id="@+id/v_empty_area" android:background="@color/global_map_nav_select_bg" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/rl_nav_title"/>
</RelativeLayout>
