<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="70dp">
    <TextView android:id="@+id/tv_pickup" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true"/>
    <ImageView android:id="@+id/iv_start" android:visibility="visible" android:layout_width="10dp" android:layout_height="10dp" android:layout_marginTop="21dp" android:src="@drawable/icon_minibus_start" android:layout_toEndOf="@+id/tv_pickup"/>
    <TextView android:id="@+id/tv_dropoff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="29.5dp" android:layout_marginStart="10dp" android:layout_toEndOf="@+id/tv_pickup"/>
    <ImageView android:id="@+id/iv_shift_select" android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/icon_minibus_unselected" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
    <View android:background="#0a000000" android:layout_width="match_parent" android:layout_height="1dp" android:layout_alignParentBottom="true"/>
</RelativeLayout>
