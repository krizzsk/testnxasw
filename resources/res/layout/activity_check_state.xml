<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:id="@+id/scroll_view" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/info" android:layout_width="match_parent" android:layout_height="wrap_content" android:textIsSelectable="true"/>
    </ScrollView>
    <Button android:id="@+id/start_push" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="重新连接Push"/>
    <Button android:id="@+id/stop_push" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="断开Push连接"/>
    <Button android:id="@+id/log_activity" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="查看log输出"/>
    <View android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
    <Button android:id="@+id/show_push_window" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="显示Push悬浮窗"/>
    <Button android:id="@+id/refresh_btn" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="刷新状态"/>
</LinearLayout>
