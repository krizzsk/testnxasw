        <ProgressBar android:layout_gravity="center" android:id="@+id/progress_bar" android:layout_width="24dp" android:layout_height="24dp" android:indeterminateDrawable="@drawable/dimina_page_loading_progress_bar"/>
    </LinearLayout>
</FrameLayout>
