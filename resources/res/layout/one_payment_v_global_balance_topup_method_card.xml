<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="60dp">
    <ImageView android:id="@+id/iv_topup_method_icon" android:layout_width="24dp" android:layout_height="15dp" android:layout_marginLeft="18dp" android:scaleType="fitCenter" android:layout_centerVertical="true" android:layout_marginStart="18dp"/>
    <LinearLayout android:gravity="left|center_vertical|center_horizontal|center|start" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_toLeftOf="@+id/tv_topup_method_value_prefix" android:layout_toRightOf="@+id/iv_topup_method_icon" android:layout_centerVertical="true" android:layout_marginStart="16dp" android:layout_toStartOf="@+id/tv_topup_method_value_prefix" android:layout_toEndOf="@+id/iv_topup_method_icon">
        <RelativeLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="16sp" android:textColor="@drawable/one_payment_global_topup_method_text_color_selector" android:gravity="start" android:id="@+id/tv_topup_method_name" android:layout_width="wrap_content" android:layout_height="19dp" android:layout_centerVertical="true"/>
            <ImageView android:id="@+id/iv_topup_method_reddot" android:background="@drawable/one_payment_wallet_hotpoint" android:visibility="gone" android:layout_width="@dimen/one_payment_wallet_hotpoint_size" android:layout_height="@dimen/one_payment_wallet_hotpoint_size" android:layout_marginLeft="1dp" android:layout_toRightOf="@+id/tv_topup_method_name" android:layout_centerVertical="true" android:layout_marginStart="1dp" android:layout_toEndOf="@+id/tv_topup_method_name"/>
        </RelativeLayout>
        <TextView android:textSize="12sp" android:textColor="@color/one_payment_gray_99" android:ellipsize="end" android:gravity="start" android:id="@+id/tv_topup_method_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="2"/>
    </LinearLayout>
    <TextView android:textSize="12sp" android:textColor="@color/one_payment_gray_99" android:gravity="start" android:id="@+id/tv_topup_method_value_prefix" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/tv_topup_method_value" android:layout_centerVertical="true" android:layout_toStartOf="@+id/tv_topup_method_value"/>
    <TextView android:textSize="10sp" android:textColor="@color/white" android:gravity="start" android:id="@+id/tv_topup_method_value" android:background="@drawable/one_payment_global_pay_method_subvalue_bg" android:paddingLeft="4dp" android:paddingRight="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:layout_toLeftOf="@+id/iv_topup_method_check" android:layout_centerVertical="true" android:paddingStart="4dp" android:paddingEnd="4dp" android:layout_marginStart="4dp" android:layout_toStartOf="@+id/iv_topup_method_check"/>
    <ImageView android:id="@+id/iv_topup_method_check" android:paddingLeft="6dp" android:paddingRight="18dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:paddingStart="6dp" android:paddingEnd="18dp" android:layout_alignParentEnd="true"/>
</RelativeLayout>
