<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="@drawable/common_dialog_bg" android:layout_width="@dimen/share_layout_width" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <LinearLayout android:gravity="center" android:id="@+id/line_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/share_line_layout_margin_top">
            <ImageView android:id="@+id/pay_line_left" android:layout_width="0dp" android:layout_height="1px" android:src="@color/light_sss_gray" android:layout_weight="1" android:layout_centerVertical="true"/>
            <TextView android:textSize="@dimen/font_size_small" android:textColor="@color/light_s_gray" android:layout_gravity="center_horizontal" android:id="@+id/pay_type_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/share_text_margin_left" android:layout_marginRight="@dimen/share_text_margin_right" android:text="@string/share_line_tip" android:layout_toRightOf="@+id/pay_line_left"/>
            <ImageView android:layout_width="0dp" android:layout_height="1px" android:src="@color/light_sss_gray" android:layout_weight="1" android:layout_toRightOf="@+id/pay_type_tip" android:layout_centerVertical="true"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:layout_gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ll_row_first" android:layout_width="match_parent" android:layout_height="@dimen/share_btn_layout_height" android:layout_marginTop="@dimen/share_btn_layout_margin_top" android:layout_below="@+id/line_layout"/>
        <LinearLayout android:gravity="center" android:layout_gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ll_row_second" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/share_btn_layout_height" android:layout_below="@+id/ll_row_first"/>
        <Button android:textSize="@dimen/font_size_large" android:gravity="center" android:id="@+id/share_btn_cancel" android:background="@drawable/common_bg_area_selector" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginLeft="@dimen/share_cancel_btn_margin" android:layout_marginTop="@dimen/share_cancel_btn_margin" android:layout_marginRight="@dimen/share_cancel_btn_margin" android:text="@string/cancel" android:layout_below="@+id/ll_row_second"/>
        <View android:layout_width="match_parent" android:layout_height="@dimen/share_cancel_btn_margin" android:layout_below="@+id/share_btn_cancel"/>
    </RelativeLayout>
</RelativeLayout>
