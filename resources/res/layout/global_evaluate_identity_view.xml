<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="50dp" android:layout_height="50dp" android:contentDescription="@string/global_evaluate_driver_photo">
        <com.didi.component.common.widget.CircleImageView android:id="@+id/iv_head" android:layout_width="47dp" android:layout_height="47dp" android:src="@drawable/global_evaluate_default_driver_icon"/>
        <ImageView android:id="@+id/iv_status" android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/global_evaluate_btn_satisfaction" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <TextView android:textSize="14sp" android:textColor="#000000" android:id="@+id/tv_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/oc_evaluate_driver"/>
    <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#000000" android:id="@+id/tv_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="@string/oc_evaluate_satisfied"/>
    <TextView android:textSize="12sp" android:textColor="#666666" android:id="@+id/tv_tips" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/global_evaluate_tip"/>
</merge>
