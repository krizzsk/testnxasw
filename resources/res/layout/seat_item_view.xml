    <ImageView android:id="@+id/iv_select_icon" android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/icon_minibus_selected" android:layout_centerVertical="true" android:layout_marginStart="10dp" android:layout_alignParentEnd="true"/>
</RelativeLayout>
