<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/rl_item_root" android:layout_width="match_parent" android:layout_height="70dp" android:layout_marginBottom="10dp" android:paddingStart="20dp" android:paddingEnd="20dp">
    <TextView android:id="@+id/tv_seatCount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true"/>
    <LinearLayout android:gravity="end" android:orientation="vertical" android:id="@+id/ll_price_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_toStartOf="@+id/iv_select_icon">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/ll_price_list" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/ll_hybrid_icon_and_text" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
    <View android:id="@+id/v_loading_top_view" android:background="@drawable/loading_view_bg" android:visibility="gone" android:layout_width="65.5dp" android:layout_height="10dp" android:layout_marginTop="23dp" android:layout_marginBottom="7dp" android:layout_toStartOf="@+id/iv_select_icon"/>
