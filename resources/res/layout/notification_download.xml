<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_gravity="center" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/notification_down_image" android:padding="15dp" android:layout_width="64dp" android:layout_height="64dp" android:layout_marginRight="5dp" android:src="@drawable/ic_notification" android:scaleType="fitCenter"/>
    <TextView android:textSize="16sp" android:textColor="#000" android:layout_gravity="center_vertical" android:id="@+id/notification_down_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/is_download" android:layout_toRightOf="@+id/notification_down_image"/>
    <TextView android:textSize="16sp" android:textColor="#000" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/notification_down_scale" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:text="0%" android:layout_alignParentRight="true"/>
    <ProgressBar android:id="@+id/notification_down_pgb" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_marginRight="10dp" android:maxHeight="15dp" android:max="100" android:progress="0" android:layout_toRightOf="@+id/notification_down_image" android:layout_below="@+id/notification_down_title" style="@style/DownloadProgressBar"/>
</RelativeLayout>
