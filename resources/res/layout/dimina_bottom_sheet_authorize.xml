<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/dimina_common_base_sheet" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:paddingLeft="16dp" android:paddingTop="24dp" android:paddingRight="16dp" android:paddingBottom="24dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="160dp">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/dialog_icon" android:layout_width="24dp" android:layout_height="24dp"/>
            <TextView android:textSize="16sp" android:textColor="#333333" android:id="@+id/dialog_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toRightOf="@+id/dialog_icon"/>
        </RelativeLayout>
        <TextView android:textSize="22sp" android:textStyle="bold" android:textColor="#333333" android:id="@+id/dialog_subTitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp"/>
        <TextView android:textSize="14sp" android:textColor="#666666" android:id="@+id/dialog_desc" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp"/>
    </LinearLayout>
    <RelativeLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="44dp" android:layout_marginTop="20dp" android:layout_marginBottom="20dp">
        <Button android:textSize="16sp" android:textColor="#07c160" android:gravity="center" android:id="@+id/dialog_cancel_btn" android:background="#dddddd" android:layout_width="120dp" android:layout_height="match_parent" android:text="@string/dimina_reject" android:layout_toLeftOf="@+id/dialog_divide"/>
        <View android:id="@+id/dialog_divide" android:layout_width="20dp" android:layout_height="match_parent" android:layout_centerInParent="true"/>
        <Button android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/dialog_confirm_btn" android:background="#07c160" android:layout_width="120dp" android:layout_height="match_parent" android:text="@string/dimina_confirm" android:layout_toRightOf="@+id/dialog_divide"/>
    </RelativeLayout>
</LinearLayout>
