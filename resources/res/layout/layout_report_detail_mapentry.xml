<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/report_item_linear_layout" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/layout_item" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp">
        <ImageView android:id="@+id/report_icon" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginTop="15dp" android:layout_marginBottom="15dp" android:src="@drawable/report_detail_loc_icon"/>
