        <ImageView android:id="@+id/report_item_arrow" android:paddingLeft="4dp" android:paddingTop="2dp" android:visibility="visible" android:layout_width="12dp" android:layout_height="12dp" android:layout_margin="25dp" android:src="@drawable/traffic_report_arrow_right" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</LinearLayout>
