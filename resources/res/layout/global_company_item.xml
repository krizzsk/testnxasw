<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="12sp" android:textColor="@color/light_gray" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/tv_global_company_extend_ontop" android:background="#f3f4f5" android:paddingLeft="17dp" android:paddingTop="7dp" android:paddingRight="17dp" android:paddingBottom="7dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="2"/>
    <RelativeLayout android:id="@+id/rl_global_company_layout" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/tv_global_company_extend_ontop">
        <ImageView android:id="@+id/iv_global_company_icon" android:layout_width="36dp" android:layout_height="36dp" android:layout_marginLeft="18dp" android:src="@drawable/one_payment_global_icon_bank_selector" android:scaleType="fitCenter" android:layout_centerVertical="true"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="14dp" android:layout_marginRight="10dp" android:layout_toLeftOf="@+id/iv_global_company_check" android:layout_toRightOf="@+id/iv_global_company_icon" android:layout_centerVertical="true">
            <TextView android:textSize="16sp" android:textColor="@drawable/one_payment_global_paymethod_text_color_selector" android:ellipsize="end" android:id="@+id/tv_global_company_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1"/>
            <TextView android:textSize="10sp" android:textColor="@color/global_company_listitem_extra_text" android:ellipsize="end" android:id="@+id/tv_global_company_desc" android:paddingLeft="3dp" android:paddingRight="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:maxLines="2"/>
        </LinearLayout>
        <ImageView android:id="@+id/iv_global_company_check" android:background="@drawable/global_company_item_check_selector" android:layout_width="18dp" android:layout_height="18dp" android:layout_marginRight="13dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView android:textSize="12sp" android:textColor="@color/light_gray" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/tv_global_company_extend" android:background="#f3f4f5" android:paddingLeft="17dp" android:paddingTop="7dp" android:paddingRight="17dp" android:paddingBottom="7dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="2" android:layout_below="@+id/rl_global_company_layout"/>
</RelativeLayout>
