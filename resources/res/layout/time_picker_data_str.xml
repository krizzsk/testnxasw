<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.didi.sdk.view.titlebar.CommonPopupTitleBar android:id="@+id/title_bar" android:layout_width="match_parent" android:layout_height="60dp" android:layout_alignParentTop="true"/>
    <LinearLayout android:orientation="horizontal" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:gravity="right" android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1">
            <View android:background="#e5e5e5" android:layout_width="match_parent" android:layout_height="1px"/>
            <TextView android:textSize="20dp" android:textColor="#000000" android:id="@+id/prefix_tv" android:padding="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=""/>
            <View android:background="#e5e5e5" android:layout_width="match_parent" android:layout_height="1px"/>
        </LinearLayout>
        <com.didi.sdk.view.wheel.Wheel android:id="@+id/wheel_simple" android:background="#ffffff" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2" app:textColor="#000000" app:textSize="20dp"/>
        <LinearLayout android:gravity="left" android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1">
            <View android:background="#e5e5e5" android:layout_width="match_parent" android:layout_height="1px"/>
            <TextView android:textSize="20dp" android:textColor="#000000" android:id="@+id/suffix_tv" android:padding="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=""/>
            <View android:background="#e5e5e5" android:layout_width="match_parent" android:layout_height="1px"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
