<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/oc_color_F3F4F5" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/share_order_content" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="18dp" android:layout_marginStart="18dp" android:layout_marginEnd="18dp">
        <ImageView android:id="@+id/share_order_status_img" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="9dp" android:src="@drawable/wallet_transfer_icon_success" android:maxWidth="77dp" android:maxHeight="80dp" android:layout_marginEnd="@dimen/wallet_dp_30" android:layout_alignParentEnd="true"/>
        <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/black" android:gravity="start" android:id="@+id/share_order_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_marginStart="12dp"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/price_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_below="@+id/share_order_title" android:layout_marginStart="12dp">
            <TextView android:textSize="40sp" android:textStyle="bold" android:textColor="@color/wallet_color_000000" android:id="@+id/share_order_symbol" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="3dp"/>
            <TextView android:textSize="40sp" android:textStyle="bold" android:textColor="@color/wallet_color_000000" android:id="@+id/share_order_price" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView android:textSize="14sp" android:gravity="start" android:orientation="vertical" android:id="@+id/share_order_subtitle" android:background="@drawable/wallet_status_history_btn_select_bg" android:paddingLeft="20dp" android:paddingTop="13dp" android:paddingRight="20dp" android:paddingBottom="13dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_below="@+id/price_layout" android:paddingHorizontal="20dp" android:paddingVertical="13dp"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/share_order_item_content" android:background="@drawable/wallet_status_history_btn_select_bg" android:paddingTop="14dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_below="@+id/share_order_subtitle" android:paddingStart="16dp" android:paddingEnd="20dp"/>
    </RelativeLayout>
    <LinearLayout android:gravity="left|center_vertical|center_horizontal|center|start" android:orientation="horizontal" android:id="@+id/ll_order_detail_guide" android:background="@drawable/wallet_global_order_detail_share_guide_bg" android:layout_width="match_parent" android:layout_height="74dp" android:layout_marginLeft="18dp" android:layout_marginTop="18dp" android:layout_marginRight="18dp" android:layout_marginBottom="18dp" android:layout_marginStart="18dp" android:layout_marginEnd="18dp">
        <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/wallet_color_000000" android:ellipsize="end" android:gravity="start" android:id="@+id/tv_order_detail_guide" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="50dp" android:maxLines="2" android:layout_weight="1" android:layout_marginStart="20dp" android:layout_marginEnd="50dp"/>
        <com.didi.payment.commonsdk.view.RoundedImageView android:id="@+id/riv_order_detail_guide_icon" android:layout_width="74dp" android:layout_height="74dp" android:src="@drawable/wallet_global_order_detail_share_guide_icon" android:scaleType="fitXY" android:layout_weight="0"/>
    </LinearLayout>
</LinearLayout>
